<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/group_4_copy"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp10"

        android:orientation="horizontal">
        <!--  ListRow Left sied Thumbnail image -->
        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dp5"
            android:padding="3dip">

            <com.rescribe.ui.customesViews.CircularImageView
                android:id="@+id/imageURL"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp16"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">

            <!-- Title Of Song-->
            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_marginTop="1dip"

                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                app:customFont="@string/roboto_bold" />

            <!-- Artist Name -->
            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctorType"
                android:layout_toRightOf="@+id/thumbnail"
                android:textColor="@color/grey_light"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                android:typeface="sans"
                app:customFont="@string/roboto_medium" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctorType"
                android:layout_toRightOf="@+id/thumbnail"
                android:textColor="@color/grey_light"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                android:typeface="sans"
                app:customFont="@string/roboto_medium" />

            <!-- Rightend Duration -->
            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctorName"
                android:layout_toRightOf="@+id/thumbnail"
                android:gravity="right"
                android:textColor="@color/grey_light"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                app:customFont="@string/roboto_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp16"
                android:textAllCaps="false"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/ruppee_services"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                app:customFont="@string/roboto_bold" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp4"
                android:layout_marginLeft="@dimen/dp4"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/favoriteView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp4"
                    android:layout_marginTop="@dimen/dp16"
                    android:src="@drawable/fav" />

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/recentVisitView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:background="@drawable/curve_edge_blue"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp6"
                    android:paddingRight="@dimen/dp6"
                    android:text="@string/recently_visit_doctor"
                    android:textColor="@color/white"
                    android:textSize="10sp"

                    app:customFont="@string/roboto_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp16"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/dp30"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/location_1" />

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/kilometers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|right"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:customFont="@string/roboto_regular" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>