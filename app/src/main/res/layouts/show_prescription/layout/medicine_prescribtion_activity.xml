<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/doseImageLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp12">

            <ImageView
                android:id="@+id/medicineType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp2"
                android:layout_marginTop="@dimen/dp6"
                android:orientation="horizontal">

                <com.myrescribe.ui.customesViews.CustomTextView
                    android:id="@+id/medicineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp18"
                    app:customFont="@string/roboto_bold" />

                <com.myrescribe.ui.customesViews.CustomTextView
                    android:id="@+id/days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp4"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14"
                    app:customFont="@string/roboto_bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/showMedicineLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewMorningDose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp8"
                        android:src="@drawable/breakfast_normal"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/imageViewAfternoonDose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp8"
                        android:src="@drawable/lunch_highlighted"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imageViewEveningDose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp8"
                        android:src="@drawable/evening_1"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imageViewNightDose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp8"
                        android:paddingRight="@dimen/dp8"
                        android:src="@drawable/night_dinner"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/dp6">

                    <View
                        android:layout_width="@dimen/dp2"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp4"
                        android:layout_marginRight="@dimen/dp8"
                        android:layout_marginTop="@dimen/dp4"
                        android:background="@color/divider" />

                    <com.myrescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doseQuantityNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp2"
                        android:gravity="right|center_vertical"
                        android:paddingRight="@dimen/dp4"
                        android:text="1"
                        android:textColor="@color/recentblue"
                        android:textSize="@dimen/sp38"
                        android:textStyle="bold"
                        app:customFont="@string/roboto_bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <com.myrescribe.ui.customesViews.CustomTextView
                            android:id="@+id/dosePeriod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp4"
                            android:text="after "
                            android:textColor="@color/instruction_color"
                            android:textSize="@dimen/sp14"
                            app:customFont="@string/roboto_bold" />

                        <com.myrescribe.ui.customesViews.CustomTextView
                            android:id="@+id/doseSlot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/dp4"
                            android:text="after "
                            android:textColor="@color/instruction_color"
                            android:textSize="@dimen/sp14"
                            app:customFont="@string/roboto_bold" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/frequencyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.myrescribe.ui.customesViews.CustomTextView
                    android:id="@+id/frequencyString"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1-1-1--1-1-1-1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/highlightedInstructionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp4"
                    android:orientation="horizontal">

                    <com.myrescribe.ui.customesViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instructions"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14"
                        android:textStyle="bold"
                        app:customFont="@string/roboto_medium" />

                    <com.myrescribe.ui.customesViews.CustomTextView
                        android:id="@+id/textViewhightlightInstructions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp4"
                        android:layout_marginRight="@dimen/dp12"
                        android:layout_weight="1"
                        android:lineSpacingExtra="@dimen/dp1"
                        android:textColor="@color/instruction_color"
                        android:textSize="@dimen/sp11"
                        app:customFont="@string/roboto_medium" />


                </LinearLayout>

            </LinearLayout>

            <include
                android:id="@+id/expandPrescriptionView"
                layout="@layout/expanded_medicine_prescribtion_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
