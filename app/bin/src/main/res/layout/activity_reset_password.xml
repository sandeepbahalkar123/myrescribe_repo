<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rescribe.ui.activities.ResetPasswordActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp16"
                android:paddingStart="@dimen/dp16"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                app:customFont="@string/roboto_bold"
                tools:text="Title" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp30"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.rescribe.ui.customesViews.CustomEditText
            android:id="@+id/passwordText"
            style="@style/AppLoginSocialStyle"
            android:hint="@string/enter_new_password"
            android:inputType="textPassword"
            app:customFont="@string/roboto_bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/divider" />

        <com.rescribe.ui.customesViews.CustomEditText
            android:id="@+id/passwordAgainText"
            style="@style/AppLoginSocialStyle"
            android:layout_marginTop="@dimen/dp16"
            android:inputType="textPassword"
            android:hint="@string/enter_new_password_again"
            app:customFont="@string/roboto_bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/divider" />

        <Button
            android:id="@+id/okButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30"
            android:background="@color/tagColor"
            android:text="@string/ok"
            android:textColor="@color/white" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>