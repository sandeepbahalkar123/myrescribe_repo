<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashBoardCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/designLineLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:background="@drawable/design_line">

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorCategoryVisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/blue_line"
                android:drawablePadding="@dimen/dp8"
                android:paddingRight="@dimen/dp4"
                android:textColor="@color/greyish"
                android:textSize="@dimen/sp12"
                app:customFont="@string/roboto_regular"
                tools:text="My Appointments"
                android:paddingTop="@dimen/dp4"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/sizeOfList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp7"
                android:layout_marginLeft="@dimen/dp11"
                android:layout_marginStart="@dimen/dp11"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/doctorCategoryVisit"
                android:background="@drawable/show_count_bg"
                android:paddingBottom="@dimen/dp4"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                app:customFont="@string/roboto_bold"
                tools:text="1" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorCategoryType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp7"
                android:background="@drawable/premium_doctor_bg"
                android:drawableLeft="@drawable/premium_icon"
                android:drawablePadding="@dimen/dp2"
                android:gravity="center"
                android:padding="@dimen/dp4"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                app:customFont="@string/roboto_medium"
                tools:text="Premium" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginTop="@dimen/dp6"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|top"
                android:padding="3dip">

                <com.rescribe.ui.customesViews.CircularImageView
                    android:id="@+id/imageURL"
                    android:layout_width="@dimen/dp56"
                    android:layout_height="@dimen/dp56"
                    android:layout_gravity="center_vertical"
                    app:border="true"
                    app:shadow="true"
                    tools:src="@drawable/layer_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp14"
                android:gravity="center|left"
                android:orientation="vertical">

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/clinicName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12"
                    app:customFont="@string/roboto_bold"
                    tools:text="Dr. Sandeep Patil Clinic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doctorName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12"
                        app:customFont="@string/roboto_bold"
                        tools:text="Dr. Sandeep Patil" />

                    <ImageView
                        android:id="@+id/favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp8"
                        android:paddingEnd="@dimen/dp4"
                        android:paddingLeft="@dimen/dp4"
                        android:paddingRight="@dimen/dp4"
                        android:paddingStart="@dimen/dp4"
                        app:srcCompat="@drawable/favourite_icon"
                        android:visibility="visible" />
                    <!-- Title Of Song-->
                </LinearLayout>

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/doctorType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/grey_shade"
                    android:textSize="10sp"
                    app:customFont="@string/roboto_medium"
                    tools:text="Cardilogist" />

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/doctorExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/grey_shade"
                    android:textSize="10sp"
                    app:customFont="@string/roboto_medium"
                    tools:text="10 years of experience " />
                <!-- Rightend Duration -->
                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/doctorAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:customFont="@string/roboto_medium"
                    tools:text="Aundh, Pune" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp12">

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp8"
                android:text="4.5"
                android:textColor="@color/rating_color"
                android:textSize="@dimen/sp13"
                app:customFont="@string/roboto_regular" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/customRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_marginLeft="@dimen/dp6"
                android:layout_marginTop="@dimen/dp3"
                android:layout_toRightOf="@id/doctorRating"
                android:stepSize="0.5" />

            <LinearLayout
                android:id="@+id/bookSlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10">

                <ImageView
                    android:id="@+id/bookAppointmentButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:visibility="gone"
                    app:srcCompat="@drawable/book"
                    tools:visibility="visible" />

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/doctorAppointmentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/card_date_color"
                    android:textSize="13sp"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    app:customFont="@string/roboto_regular"
                    tools:text="Oct 18,2017" />

                <ImageView
                    android:id="@+id/tokenNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/get_token_btn"
                    android:visibility="gone"
                    tools:src="@drawable/get_token_btn" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ratingBar"
                android:layout_toLeftOf="@id/bookSlot"
                android:layout_toRightOf="@id/ratingBar"
                android:layout_toStartOf="@id/bookSlot"
                android:gravity="center"
                android:orientation="horizontal">

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/feesToPaidVisit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp10"
                    android:drawableLeft="@drawable/dashboard_big_black_ruppee"
                    android:drawablePadding="@dimen/dp2"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    app:customFont="@string/roboto_bold"
                    tools:text="500" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
