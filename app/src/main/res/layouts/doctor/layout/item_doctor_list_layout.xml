<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="horizontal">
  <!--  android:layout_marginTop="@dimen/dp16"
    android:layout_marginLeft="@dimen/dp4"
    android:layout_marginRight="@dimen/dp4"-->

    <LinearLayout
        android:id="@+id/parentDataContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.myrescribe.ui.customesViews.CustomTextView
            android:id="@+id/date"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:textColor="@color/tagColor"
            android:textSize="@dimen/sp20"
            android:visibility="visible"
         />

        <LinearLayout
            android:layout_width="@dimen/dp20"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/upperLine"
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/dose_completed" />

            <ImageView
                android:id="@+id/circularBulletMainElement"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp20"
                android:src="@drawable/blue_dot"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/circularBulletChildElement"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp10"
                android:src="@drawable/small_blue_dot"
                android:visibility="visible" />

            <TextView
                android:id="@+id/lowerLine"
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/dose_completed" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainDataContainer"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">
            <!--  ListRow Left sied Thumbnail image -->
            <LinearLayout
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dip"
                android:padding="3dip">

                <com.myrescribe.ui.customesViews.CircularImageView
                    android:id="@+id/list_image"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:layout_gravity="center"
                    android:src="@drawable/layer_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/thumbnail"
                android:gravity="center|left"
                android:orientation="vertical">

                <!-- Title Of Song-->
                <com.myrescribe.ui.customesViews.CustomTextView
                    android:textStyle="bold"
                    android:id="@+id/doctorType"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/thumbnail"
                    android:layout_marginTop="@dimen/dp4"
                    android:text="Just gona stand there and ..."
                    android:textColor="@color/doctor_specialist_color"
                    android:textSize="@dimen/sp18"
                    app:customFont="@string/roboto_bold"/>

                <!-- Artist Name -->
                <com.myrescribe.ui.customesViews.CustomTextView
                    android:id="@+id/doctorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctorType"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:textColor="@color/tagColor"
                    android:textSize="@dimen/sp20"
                    android:textStyle="bold"
                    app:customFont="@string/roboto_bold" />

                <!-- Rightend Duration -->
                <com.myrescribe.ui.customesViews.CustomTextView
                    android:id="@+id/doctorAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctorName"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:gravity="right"
                    android:text="Aundh, Pune"
                    android:textColor="@color/doctor_specialist_color"
                    android:textSize="@dimen/sp14"
                    app:customFont="@string/roboto_bold"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
