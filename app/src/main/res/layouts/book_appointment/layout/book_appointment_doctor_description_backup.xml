<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/doc_detail_header_bg"
                android:orientation="vertical"
                android:padding="@dimen/md_baseline"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:gravity="center">

                    <com.rescribe.ui.customesViews.CircularImageView
                        android:id="@+id/profileImage"
                        android:layout_width="@dimen/dp120"
                        android:layout_height="@dimen/dp120"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/layer_12" />

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/docRating"
                        style="@style/Base.TextAppearance.AppCompat.Body2"
                        android:layout_width="@dimen/dp48"
                        android:layout_height="@dimen/dp48"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="-30dp"
                        android:layout_toRightOf="@+id/profileImage"
                        android:background="@drawable/star"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="+10"
                        android:textColor="@android:color/white"
                        android:textSize="11sp" />

                </RelativeLayout>

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/doctorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Dr. Patil"
                    android:textColor="@color/recentblue"
                    android:textSize="@dimen/sp18"
                    app:customFont="@string/roboto_bold" />

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/doctorSpecialization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip"
                    android:gravity="center"
                    android:text="Cardilogist"
                    android:textColor="@color/dose_completed"
                    android:textSize="@dimen/sp14"
                    app:customFont="@string/roboto_medium" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp10"
                android:orientation="vertical">

                <com.rescribe.ui.customesViews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp10"
                    android:text="@string/about_doctor"
                    android:textSize="@dimen/sp14"
                    app:customFont="@string/roboto_medium" />

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/aboutDoctorDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp10"
                    android:text="Lorem \n\n"
                    android:textSize="@dimen/sp14"
                    app:customFont="@string/roboto_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/doc_experience" />
                    </LinearLayout>

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doctorExperience"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dp5"
                        android:text="asdassdfd"
                        android:textSize="@dimen/sp14"
                        app:customFont="@string/roboto_medium" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.047"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ruppee" />
                    </LinearLayout>


                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doctorFees"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dp5"
                        android:text="asdasd"
                        android:textSize="@dimen/sp14"
                        app:customFont="@string/roboto_medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.01"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/hospital_practices" />
                    </LinearLayout>

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doctorPractices"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dp5"
                        android:textSize="@dimen/sp14"
                        app:customFont="@string/roboto_medium" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/locationImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:visibility="visible"></ImageView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.01"
                        android:gravity="center"
                        android:src="@drawable/clock" />

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dp5"
                        android:text="@string/open_today"
                        android:textAllCaps="true"
                        android:textSize="@dimen/sp14"
                        app:customFont="@string/roboto_medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/allTimingListViewLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/allTimeSlotListView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@null"
                            android:dividerHeight="0dp"
                            android:paddingBottom="@dimen/dp2"
                            android:visibility="visible"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp10" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green_book_appointment"
            android:text="@string/book_appointment"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>