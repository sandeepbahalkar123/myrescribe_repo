<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notification_bg_grey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/notification_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_marginRight="@dimen/dp12"
                app:srcCompat="@drawable/notifications_get_token_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/notification_bg_grey"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp8"
                        android:paddingRight="@dimen/dp8">

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/textMessageTimeStamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:textColor="@color/grey_shade"
                            android:textSize="@dimen/sp11"
                            tools:visibility="visible"
                            android:paddingTop="@dimen/dp4"
                            app:customFont="@string/roboto_medium"
                            tools:text="2:00 am" />

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/textMessage"
                            android:paddingTop="@dimen/dp4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Do you want to confirm the token number available with Dr. Sachin Patil for 10:00 pm today?"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp13"
                            app:customFont="@string/roboto_medium" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/dp5">

                            <com.rescribe.ui.customesViews.CustomTextView
                                android:id="@+id/skipItems"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="@dimen/dp5"
                                android:gravity="right"
                                android:paddingTop="@dimen/dp10"
                                android:paddingBottom="@dimen/dp13"
                                android:paddingLeft="@dimen/dp5"
                                android:text="@string/skip"
                                android:textColor="@color/no_color"
                                android:textSize="@dimen/sp12"
                                android:visibility="gone"
                                app:customFont="@string/roboto_medium" />

                            <com.rescribe.ui.customesViews.CustomTextView
                                android:id="@+id/loadMoreItems"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="right"
                                android:layout_toRightOf="@+id/skipItems"
                                android:gravity="right"
                                android:text="@string/more"
                                android:paddingTop="@dimen/dp10"
                                android:paddingBottom="@dimen/dp13"
                                android:paddingLeft="@dimen/dp5"
                                android:paddingRight="@dimen/dp5"
                                android:textColor="@color/statusbar"
                                android:textSize="@dimen/sp12"
                                app:customFont="@string/roboto_medium" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/divider" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>