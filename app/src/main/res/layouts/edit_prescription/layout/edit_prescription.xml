<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_marginRight="@dimen/dp4"
        android:layout_marginTop="@dimen/dp4"
       >

        <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"

      >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/type"
           android:textColor="@color/black"
           android:textStyle="bold"
           android:textSize="@dimen/sp16"
           android:layout_marginLeft="@dimen/dp6"
           android:layout_marginTop="@dimen/dp4"
           />
       <Spinner
           android:id="@+id/spinnerType"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/dp6"
           android:layout_marginRight="@dimen/dp6"
           android:layout_marginBottom="@dimen/dp2"
           android:textSize="@dimen/sp16"
           android:textColor="@color/black"

           />
       <View
           android:layout_marginLeft="@dimen/dp6"
           android:layout_marginRight="@dimen/dp6"
           android:layout_marginBottom="@dimen/dp4"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp05"
           android:background="@color/grey"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/medicine"
           android:textColor="@color/black"
           android:textStyle="bold"
           android:textSize="@dimen/sp16"
           android:layout_marginLeft="@dimen/dp6"
           android:layout_marginRight="@dimen/dp6"
           android:layout_marginBottom="@dimen/dp2"
           />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Convert M1 Forte"
           android:textSize="@dimen/sp16"
           android:layout_marginLeft="@dimen/dp6"
           android:layout_marginRight="@dimen/dp6"
           android:layout_marginBottom="@dimen/dp2"
           android:textColor="@color/black" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="@string/dose"
           android:layout_weight="0.5"
           android:textColor="@color/black"
           android:textStyle="bold"
           android:textSize="@dimen/sp16"
           android:layout_marginLeft="@dimen/dp6"
           android:layout_marginRight="@dimen/dp6"
           android:layout_marginBottom="@dimen/dp2" />
       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textStyle="bold"
           android:text="@string/duration"
           android:textColor="@color/black"
           android:textSize="@dimen/sp16"
           android:layout_marginLeft="@dimen/dp6"
           android:layout_marginRight="@dimen/dp6"
           android:layout_marginBottom="@dimen/dp2"
           />
           </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"

           >
           <EditText
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="1 Tab"
               android:layout_weight="0.5"
               android:textSize="@dimen/sp16"
               android:layout_marginLeft="@dimen/dp6"
               android:layout_marginRight="@dimen/dp6"
               android:layout_marginBottom="@dimen/dp2"
               android:textColor="@color/black"

               />
           <EditText
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="90 Days"
               android:textSize="@dimen/sp16"
               android:textColor="@color/black"
               android:layout_marginLeft="@dimen/dp6"
             android:layout_marginRight="@dimen/dp6"
               android:layout_marginBottom="@dimen/dp2"


               />
       </LinearLayout>

   </LinearLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_marginRight="@dimen/dp4"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginBottom="@dimen/dp2"
     >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

      >
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16"
        android:drawablePadding="@dimen/dp10"
        android:drawableLeft="@mipmap/sunset"
        android:layout_marginLeft="@dimen/dp6"
        android:layout_marginRight="@dimen/dp6"
        android:layout_marginBottom="@dimen/dp2"
        android:text="1"/>

    <Spinner
        android:id="@+id/spinnerBreakfastDose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/sp16"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dp6"
        android:layout_marginRight="@dimen/dp6"
        android:layout_marginBottom="@dimen/dp2"
     />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp6"
          android:layout_marginRight="@dimen/dp6"
            android:layout_marginBottom="@dimen/dp2"
            android:text="1"
            android:textSize="@dimen/sp16"
            android:drawablePadding="@dimen/dp10"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/sun"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/sp16"
            android:id="@+id/spinnerLunchDose"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_marginRight="@dimen/dp6"
            android:layout_marginBottom="@dimen/dp2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      >
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_marginRight="@dimen/dp6"
            android:layout_marginBottom="@dimen/dp2"
            android:drawablePadding="@dimen/dp10"
            android:textSize="@dimen/sp16"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/night"
            android:text="1"/>

        <Spinner
            android:id="@+id/spinnerDinnerDose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_marginRight="@dimen/dp6"

            />
    </LinearLayout>

</LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_marginRight="@dimen/dp4"
        android:layout_marginBottom="@dimen/dp2"


        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp4"
            android:layout_marginLeft="@dimen/dp6"
            android:textSize="@dimen/sp16"
           android:layout_marginRight="@dimen/dp6"
            android:layout_marginBottom="@dimen/dp2"
            android:text="@string/instructions"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_marginRight="@dimen/dp6"
            android:layout_marginBottom="@dimen/dp6"
            android:background="@color/grey"
            android:hint="@string/typehere"
            android:paddingLeft="@dimen/dp2"
            android:textSize="@dimen/sp16"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/dp50"
            android:layout_height="wrap_content" />
</LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

