<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popular_places_bg"
    android:gravity="center"
    android:orientation="vertical">

    <com.rescribe.ui.customesViews.CustomTextView
        android:id="@+id/popularPlaceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp11"
        app:customFont="@string/roboto_bold"
        tools:text="Baner" />
    <com.rescribe.ui.customesViews.CustomTextView
        android:id="@+id/countOfDoctors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_shade"
        android:textSize="@dimen/sp10"
        app:customFont="@string/roboto_medium"
        tools:text="Baner" />
</LinearLayout>