<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="MissingTranslation">

    <com.rescribe.ui.customesViews.CustomTextView
        android:id="@+id/pickSpeciality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp4"
        android:text="@string/pick_speciality"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16"
        android:visibility="gone"
        app:customFont="@string/roboto_medium" />
    <LinearLayout
        android:id="@+id/recyclerViewLinearLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pickSpeciality"
        android:divider="@null"
        android:layout_marginTop="@dimen/dp16"
        android:layout_weight="0.5"
        android:dividerHeight="0dp"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@id/recyclerViewLinearLayout"
        android:id="@+id/doubtMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.rescribe.ui.customesViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp6"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:paddingTop="@dimen/dp6"
            android:text="@string/clickhere"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12"
            app:customFont="@string/roboto_bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/emptyListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/no_records_found"
            android:gravity="center"
            android:orientation="vertical" />
    </RelativeLayout>
    <!--  <ImageView
          android:id="@+id/emptyListView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:gravity="center"
          android:src="@drawable/no_records_found"
          android:textSize="@dimen/sp18"
          android:visibility="gone" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>
