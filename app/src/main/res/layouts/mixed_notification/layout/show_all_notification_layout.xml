<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp24"
                android:layout_marginLeft="@dimen/dp14"
                android:layout_marginRight="@dimen/dp24"
                android:layout_marginStart="@dimen/dp14"
                android:layout_marginTop="@dimen/dp14">

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/doctorConnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/doctor_connect"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp15"
                    app:customFont="@string/roboto_medium" />

                <com.rescribe.ui.customesViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/grey_shade"
                    android:textSize="@dimen/sp11"
                    app:customFont="@string/roboto_medium"
                    tools:text="2m ago" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp16"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/notification_bg"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp12"
                        android:layout_marginRight="@dimen/dp12"
                        android:src="@drawable/doctor_connect" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/notification_bg_grey"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp16"
                        android:layout_marginEnd="@dimen/dp12"
                        android:layout_marginLeft="@dimen/dp6"
                        android:layout_marginRight="@dimen/dp12"
                        android:layout_marginStart="@dimen/dp6"
                        android:layout_marginTop="@dimen/dp16"
                        android:orientation="vertical">

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp13"
                            app:customFont="@string/roboto_medium"
                            tools:text="Message from Dr.Rahul Kalyanpur" />

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp8"
                            android:textColor="@color/grey_shade"
                            android:textSize="@dimen/sp12"
                            app:customFont="@string/roboto_medium"
                            tools:text="Have you submitted reports" />

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/dp9"
                            android:text="@string/more"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/sp12"
                            app:customFont="@string/roboto_medium" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/divider" />

            <include layout="@layout/get_token_notification_layout" />

            <include layout="@layout/appointment_notification__item_layout" />
<include layout="@layout/investigation_notification_item_layout"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>