<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="@dimen/dp30"
    android:orientation="vertical">

    <com.rescribe.ui.customesViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_forgot_password"
        android:textColor="@color/Gray"
        android:textSize="@dimen/sp14"
        android:textStyle="bold"
        android:typeface="sans" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/countyCode"
        android:layout_width="@dimen/dp40"
        android:layout_height="wrap_content"
        android:text="+91"
        android:layout_alignBaseline="@+id/editTextMobileNo"
        android:textSize="@dimen/sp16"
        android:typeface="sans" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/editTextMobileNo"
        style="@style/AppLoginSocialStyle"
        android:layout_toRightOf="@+id/countyCode"
        android:layout_marginTop="@dimen/dp16"
        android:inputType="phone"
        android:hint="@string/enter_mobile_no"
        android:textStyle="bold"
        android:typeface="sans" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/divider" />

    <Button
        android:id="@+id/forgotPasswordSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginTop="@dimen/dp16"
        android:background="@color/recentblue"
        android:gravity="center"
        android:text="@string/submit"
        android:textAllCaps="true"
        android:textColor="@android:color/white" />

</LinearLayout>

