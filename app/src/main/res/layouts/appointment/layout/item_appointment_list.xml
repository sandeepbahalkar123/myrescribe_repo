<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp16"
    android:layout_marginEnd="@dimen/dp6"
    android:layout_marginLeft="@dimen/dp16"
    android:layout_marginRight="@dimen/dp6"
    android:layout_marginTop="@dimen/dp16"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <!--  ListRow Left sied Thumbnail image -->
        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dp5"
            android:padding="3dip">

            <com.rescribe.ui.customesViews.CircularImageView
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp16"
                android:src="@drawable/layer_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">

            <!-- Title Of Song-->
            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_marginTop="1dip"
                android:text="Cardilogist"
                android:textColor="@color/dose_completed"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <!-- Artist Name -->
            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctorType"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="Dr. Sandeep Patil"
                android:textColor="@color/recentblue"
                android:textSize="@dimen/sp18"
                android:textStyle="bold"
                android:typeface="sans" />

            <!-- Rightend Duration -->
            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctorName"
                android:layout_toRightOf="@+id/thumbnail"
                android:gravity="right"
                android:text="10th July, Aundh, Pune"
                android:textColor="@color/dose_completed"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/appointmentsTimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6:30 pm"
                android:textAllCaps="false"
                android:textColor="@color/dose_completed"
                app:customFont="@string/roboto_bold" />

            <ImageView
                android:id="@+id/gMapLocationView"
                android:layout_width="@dimen/dp35"
                android:layout_height="@dimen/dp35"
                android:layout_marginRight="@dimen/dp16"
                android:paddingTop="@dimen/dp6"
                android:src="@drawable/location" />
        </LinearLayout>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp1"
    android:layout_marginTop="@dimen/dp16"
    android:background="@color/divider"/>
</LinearLayout>