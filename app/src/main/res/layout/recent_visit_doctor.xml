<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:visibility="visible"
        android:background="@color/tagColor"
        android:id="@+id/searchBarLinearLayout"
        android:layout_height="?attr/actionBarSize"
        android:orientation="vertical">
        <com.rescribe.ui.customesViews.EditTextWithDeleteButton
            android:id="@+id/searchView"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="@dimen/dp4"
            android:gravity="center"
            android:inputType="text"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            app:deleteButtonRes="@drawable/close"
            app:hintText="@string/search" />

      <!--  <TextView
            android:id="@+id/whiteUnderLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/white" />-->

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <com.rescribe.ui.customesViews.CircleIndicator
            android:id="@+id/circleIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp4"
            app:ci_animator="@anim/indicator_no_animator"
            app:ci_drawable="@drawable/white_radius"
            app:ci_drawable_unselected="@drawable/black_radius" />

    </FrameLayout>

    <include layout="@layout/book_appointment_recyclerview" />
</LinearLayout>