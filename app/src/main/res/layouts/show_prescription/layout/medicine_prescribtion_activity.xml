<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/medicineName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_marginLeft="@dimen/dp6"
                android:layout_marginRight="@dimen/dp2"
                android:layout_marginTop="@dimen/dp6"
                android:layout_weight="1"
                android:text="Convert M1 Forte"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/morningTimeDose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_marginRight="@dimen/dp2"
                android:layout_marginTop="@dimen/dp6"
                android:layout_weight="0.5"
                android:drawableLeft="@mipmap/sunset"
                android:text="1BB"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lunchTimeDose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_marginRight="@dimen/dp2"
                android:layout_marginTop="@dimen/dp6"
                android:layout_weight="0.5"
                android:drawableLeft="@mipmap/sun"
                android:text="1AL"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dinnerTimeDose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_marginRight="@dimen/dp2"
                android:layout_marginTop="@dimen/dp6"
                android:layout_weight="0.5"

                android:drawableLeft="@mipmap/night"
                android:text="1BD"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_marginRight="@dimen/dp2"
                android:layout_marginTop="@dimen/dp6"
                android:layout_weight="1"
                android:gravity="end"
                android:text="80 days"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textviewTabletLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp6"
                android:layout_marginRight="@dimen/dp6"
                android:layout_marginTop="@dimen/dp6"
                android:layout_weight="1"
                android:text="@string/tablet"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textviewDisplayDates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp6"
                android:layout_marginRight="@dimen/dp6"
                android:layout_marginTop="@dimen/dp6"
                android:layout_weight="0.5"
                android:text=""
                android:textColor="@color/black"
                android:textStyle="bold"

                />
        </LinearLayout>

        <include
            android:id="@+id/expandPrescriptionView"
            layout="@layout/expanded_medicine_prescribtion_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>
</android.support.v7.widget.CardView>