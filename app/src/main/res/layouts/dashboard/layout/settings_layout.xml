<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rescribe.ui.activities.dashboard.SettingsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/title"
                android:paddingLeft="@dimen/dp16"
                android:paddingStart="@dimen/dp16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                android:visibility="visible"
                app:customFont="@string/roboto_bold"
                tools:text="sfdfsdgffghghg" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/detailsLayout"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/settingsMenuList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/selectMenuLayout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <ImageView
                        android:id="@+id/menuIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp8"
                        android:layout_marginStart="@dimen/dp8"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/dp8"
                        tools:src="@drawable/select_doctor" />

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/menuIcon"
                        android:layout_toLeftOf="@+id/arrowIcon1"
                        android:layout_toRightOf="@+id/menuIcon"
                        android:layout_toStartOf="@+id/arrowIcon1"
                        android:paddingEnd="@dimen/dp8"
                        android:paddingStart="@dimen/dp8"
                        android:text="@string/logout"
                        android:textColor="@color/tagColor"
                        android:textSize="@dimen/sp16"
                        app:customFont="@string/roboto_medium" />

                    <ImageView
                        android:id="@+id/dashboardArrowIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp16"
                        android:layout_marginRight="@dimen/dp16"
                        app:srcCompat="@drawable/logout_settings_icon" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/divider" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp9"
            android:layout_marginTop="@dimen/dp9"
            android:gravity="center"
            android:orientation="vertical">

            <com.rescribe.ui.customesViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rescribe is a unique product of"
                android:textSize="@dimen/sp13"
                app:customFont="@string/roboto_regular"
                app:srcCompat="@drawable/scrog_product" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/company_name"
                android:textSize="@dimen/sp13"
                app:customFont="@string/roboto_regular"
                app:srcCompat="@drawable/scrog_product" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/versionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/sp13"
                tools:text="v1.1(4)"
                app:customFont="@string/roboto_regular"
                app:srcCompat="@drawable/scrog_product" />

        </LinearLayout>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
