<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp16"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/notification_bg"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp12"
                    android:layout_marginRight="@dimen/dp12"
                    android:src="@drawable/notifications_get_token_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/notification_bg_grey"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp16"
                    android:layout_marginEnd="@dimen/dp12"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_marginStart="@dimen/dp6"
                    android:layout_marginTop="@dimen/dp16"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/tabNameTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/tabTypeView"
                            android:layout_toLeftOf="@+id/tabCountTextView"
                            android:layout_toRightOf="@+id/tabTypeView"
                            android:layout_toStartOf="@+id/tabCountTextView"
                            android:paddingEnd="@dimen/dp6"
                            android:paddingLeft="@dimen/dp10"
                            android:paddingRight="@dimen/dp6"
                            android:paddingStart="@dimen/dp10"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp18"
                            app:customFont="@string/roboto_bold"
                            tools:text="Rantac" />

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/tabCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/selectViewTab"
                            android:layout_toStartOf="@+id/selectViewTab"
                            android:paddingRight="@dimen/dp26"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp20"
                            app:customFont="@string/roboto_bold" />

                        <CheckBox
                            android:id="@+id/selectViewTab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp20"
                            android:layout_marginStart="@dimen/dp20"
                            android:button="@drawable/checkboxselecter"
                            android:paddingEnd="@dimen/dp10"
                            android:paddingRight="@dimen/dp10" />
                    </RelativeLayout>
                    <!-- <com.rescribe.ui.customesViews.CustomTextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="@color/black"
                         android:textSize="@dimen/sp13"
                         app:customFont="@string/roboto_medium"
                         tools:text="Rantac" />-->

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/divider" />
    </LinearLayout>
</LinearLayout>