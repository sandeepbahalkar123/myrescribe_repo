<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<LinearLayout
    android:layout_marginLeft="@dimen/dp20"
    android:layout_marginStart="@dimen/dp20"
    android:layout_marginTop="@dimen/dp14"
    android:layout_marginBottom="@dimen/dp14"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/slotImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/breakfast_normal"/>
    <com.rescribe.ui.customesViews.CustomTextView
        android:layout_width="wrap_content"
        app:customFont="@string/roboto_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/sp15"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginStart="@dimen/dp10"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:id="@+id/slotName"
        tools:text="Morning"/>
    <com.rescribe.ui.customesViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:customFont="@string/roboto_regular"
        android:textSize="@dimen/sp11"
        android:id="@+id/slotTime"
        android:layout_marginLeft="@dimen/dp6"
        android:layout_marginStart="@dimen/dp6"
        android:layout_gravity="center_vertical"
        android:textColor="@color/slot_color"
        tools:text="before 12 pm"/>

</LinearLayout>
</LinearLayout>