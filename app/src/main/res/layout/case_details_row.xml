<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/drIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginStart="@dimen/dp8"
            android:adjustViewBounds="true"
            android:padding="@dimen/dp8"
            tools:src="@drawable/select_doctor" />

        <com.myrescribe.ui.customesViews.CustomTextView
            android:id="@+id/drNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/drIcon"
            android:layout_toLeftOf="@+id/selectCheckbox"
            android:layout_toRightOf="@+id/drIcon"
            android:layout_toStartOf="@+id/selectCheckbox"
            android:padding="@dimen/dp8"
            tools:text="@string/select_doctors"
            android:textColor="@color/tagColor"
            android:textSize="@dimen/sp23"
            app:customFont="@string/roboto_bold" />

        <CheckBox
            android:id="@+id/selectCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:button="@drawable/checkboxselecter" />

    </RelativeLayout>

</RelativeLayout>