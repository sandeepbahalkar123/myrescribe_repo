<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificationLayout"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:clipToPadding="true"
    android:padding="@dimen/dp4">

    <ImageView
        android:id="@+id/bigIcon"
        android:layout_width="@dimen/dp40"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/dp6"
        android:layout_marginStart="@dimen/dp6"
        android:adjustViewBounds="true"
        android:padding="@dimen/dp2"
        app:srcCompat="@drawable/ic_notification_investigations" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp2"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_marginRight="@dimen/dp2"
        android:layout_marginStart="@dimen/dp4"
        android:layout_marginTop="@dimen/dp4"
        android:layout_toEndOf="@id/bigIcon"
        android:layout_toRightOf="@+id/bigIcon"
        android:orientation="vertical"
        android:padding="@dimen/dp4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/showMedicineName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Rx Medicine" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                tools:text="8:00pm" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp4"
            android:paddingTop="@dimen/dp4">

            <TextView
                android:id="@+id/questionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/buttonSkip"
                android:layout_toStartOf="@+id/buttonSkip"
                android:textColor="@color/instruction_color"
                android:textSize="@dimen/sp12"
                tools:text="@string/dummy_normal" />

            <TextView
                android:id="@+id/buttonSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingEnd="@dimen/dp8"
                android:paddingStart="@dimen/dp8"
                android:text="@string/skip"
                android:textAllCaps="true"
                android:textColor="@color/tagColor"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
