<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp16"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/notification_bg"
                android:gravity="center">

                <ImageView
                    android:layout_marginLeft="@dimen/dp12"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notifications_get_token_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/notification_bg_grey"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp16"
                    android:layout_marginEnd="@dimen/dp12"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_marginStart="@dimen/dp6"
                    android:layout_marginTop="@dimen/dp16"
                    android:orientation="vertical">

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp13"
                        app:customFont="@string/roboto_medium"
                        tools:text="Do you want to confirm the token number available with Dr. Sachin Patil for 10:00 pm today?" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10">

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/yesTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yes"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/dp13"
                            app:customFont="@string/roboto_medium" />

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/noTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp34"
                            android:layout_toRightOf="@id/yesTextView"
                            android:text="@string/no"
                            android:textColor="@color/no_color"
                            android:textSize="@dimen/dp13"
                            app:customFont="@string/roboto_medium" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/divider" />
    </LinearLayout>
</LinearLayout>