<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp16"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/vector_smart_object" />

                <com.rescribe.ui.customesViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/your_health"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sp13"
                    app:customFont="@string/roboto_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp20"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp30"
                    android:paddingRight="@dimen/dp30">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/countyCode"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/editTextMobileNo"
                            android:text="+91"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/sp16"
                            android:typeface="sans" />

                        <EditText
                            android:id="@+id/editTextMobileNo"
                            style="@style/AppLoginNewMainStyle"
                            android:layout_toRightOf="@id/countyCode"
                            android:hint="@string/enter_mobile_no"
                            android:inputType="number"
                            android:maxLength="10"
                            android:typeface="sans" />

                    </RelativeLayout>
                    <!--  Email Label -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/colorAccent" />


                    <EditText
                        android:id="@+id/editTextPassword"
                        style="@style/AppLoginNewMainStyle"
                        android:layout_marginTop="@dimen/dp14"
                        android:drawableEnd="@drawable/password"
                        android:drawableRight="@drawable/password"
                        android:hint="@string/enter_password"
                        android:inputType="textPassword"
                        android:paddingTop="@dimen/dp16"
                        android:typeface="sans" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/colorAccent" />

                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp28"
                        android:layout_marginRight="@dimen/dp28"
                        android:layout_marginTop="@dimen/dp38"
                        android:background="@color/login_bg_color"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:text="@string/log_in"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp17" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp6"
                        android:orientation="horizontal">

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/btnOtp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp6"
                            android:text="@string/login_using_otp"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/dp2"
                            android:layout_height="@dimen/dp20"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:background="@color/colorAccent" />

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/forgotPasswordView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp6"
                            android:text="@string/forgot_password"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp16"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingEnd="@dimen/dp30"
                android:paddingStart="@dimen/dp30">

                <Button
                    android:id="@+id/btnSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp28"
                    android:layout_marginStart="@dimen/dp28"
                    android:layout_marginTop="@dimen/sp16"
                    android:background="@drawable/sign_up_btn_background"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:text="@string/sign_up"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sp17" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp16"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    app:srcCompat="@drawable/or" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/loginUpWithFacebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp28"
                        app:srcCompat="@drawable/fb" />

                    <ImageView
                        android:id="@+id/loginUpWithGmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp28"
                        app:srcCompat="@drawable/google" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp16"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    app:srcCompat="@drawable/privacy_policy" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
