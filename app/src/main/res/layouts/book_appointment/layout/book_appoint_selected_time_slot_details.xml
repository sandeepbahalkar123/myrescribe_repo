<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_clock" />
                </LinearLayout>

                <com.rescribe.ui.customesViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp5"
                    android:text="@string/appointment"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14"
                    app:customFont="@string/roboto_regular" />

                <com.rescribe.ui.customesViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp5"
                    android:text="@string/schedule_at"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/sp10"
                    app:customFont="@string/roboto_regular" />

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/scheduledAppointmentsTimeStamp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp5"
                    android:textColor="@color/tagColor"
                    android:textSize="@dimen/sp13"
                    app:customFont="@string/roboto_bold"
                    tools:text="10:30 AM" />

            </LinearLayout>

            <ImageView
                android:id="@+id/tokenNewTimeStamp"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:src="@drawable/icon_edit_pencil_blue" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:paddingBottom="@dimen/dp10"
            android:background="@color/divider" />

        <LinearLayout
            android:padding="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp10"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/token_icon" />
            </LinearLayout>

            <com.rescribe.ui.customesViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp5"
                android:text="@string/token_number"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                app:customFont="@string/roboto_regular" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/receivedTokenNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp5"
                android:textColor="@color/tagColor"
                android:textSize="@dimen/sp13"
                app:customFont="@string/roboto_bold"
                tools:text="10:30 AM" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:paddingBottom="@dimen/dp10"
            android:background="@color/divider" />
        <LinearLayout
            android:id="@+id/doctorExperienceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp10"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/waiting_time_icon" />
            </LinearLayout>

            <com.rescribe.ui.customesViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp5"
                android:text="@string/waiting_time"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                app:customFont="@string/roboto_regular" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/waitingTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp5"
                android:textColor="@color/tagColor"
                android:textSize="@dimen/sp13"
                app:customFont="@string/roboto_bold"
                tools:text="10:30 AM" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp5"
                android:text="@string/minutes"
                android:textColor="@color/Gray"
                android:textSize="@dimen/sp10"
                app:customFont="@string/roboto_regular" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/divider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bookAppointmentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/clickHere"
            android:text="@string/confirm_token"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>