<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:paddingTop="@dimen/dp6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/border"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vitalImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="22dp"
            android:src="@drawable/remarks" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/vital_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textColor="@color/vitals_name"
                android:textSize="@dimen/sp14"
                app:customFont="@string/roboto_bold" />

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/measureVitals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/vital_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dp4"
                android:text="kg"
                android:textColor="@color/measure_of_vitals_color"
                android:textSize="@dimen/sp14"
                android:textStyle="bold"
                app:customFont="@string/roboto_bold" />

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/noOfVitals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/measureVitals"
                android:text="90"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                app:customFont="@string/roboto_medium" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>