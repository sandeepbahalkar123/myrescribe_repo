<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/showDurationAndQuantityOfDoseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp16"
        android:layout_marginTop="@dimen/dp4"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.rescribe.ui.customesViews.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:background="@drawable/curve_edges_button"
            android:padding="@dimen/dp6"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            android:visibility="invisible"
            app:customFont="@string/roboto_bold" />

        <com.rescribe.ui.customesViews.CustomTextView
            android:id="@+id/showDoseAndSlot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:background="@drawable/curve_edges_button"
            android:gravity="center"
            android:padding="@dimen/dp6"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            app:customFont="@string/roboto_bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/doseImageLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp12">

            <ImageView
                android:id="@+id/medicineType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/medicineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/dp2"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"
                    app:customFont="@string/roboto_bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/showMedicineLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/doseAge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14"
                    app:customFont="@string/roboto_bold" />

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/frequencyString"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14"
                    app:customFont="@string/roboto_bold" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp16"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp8"
                        android:layout_weight="0.5"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14"
                        android:textStyle="bold"
                        app:customFont="@string/roboto_bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/highlightedInstructionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp4"
                    android:orientation="horizontal">

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instructions"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12"
                        app:customFont="@string/roboto_medium" />

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/textViewhightlightInstructions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp4"
                        android:layout_marginRight="@dimen/dp12"
                        android:layout_weight="1"
                        android:lineSpacingExtra="@dimen/dp1"
                        android:textColor="@color/instruction_color"
                        android:textSize="@dimen/sp12"
                        app:customFont="@string/roboto_medium" />


                </LinearLayout>

            </LinearLayout>

            <include
                android:id="@+id/expandPrescriptionView"
                layout="@layout/expanded_medicine_prescribtion_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
