<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clickOnDoctorVisitLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <TextView
        android:id="@+id/childSideBarView"
        android:layout_width="@dimen/dp4"
        android:layout_height="match_parent"
        android:background="@color/transparent" />

    <LinearLayout
        android:id="@+id/parentDataContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp6"
        android:paddingStart="@dimen/dp6">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.14"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="@dimen/dp32"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/upperLine"
                android:layout_width="@dimen/dp1"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/recentblue" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.9"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_weight="5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/headerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/dp2"
                        android:textColor="@color/recentblue"
                        android:textSize="@dimen/sp16"
                        android:textStyle="bold"
                        android:typeface="sans"
                        tools:text="Rihanna Love the way lie" />

                    <ImageView
                        android:id="@+id/attachmentImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/dp5"
                        android:src="@drawable/attachment"
                        android:visibility="gone" />

                </LinearLayout>
                <!-- Artist Name -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cardDetailsBullet"
                        android:layout_width="@dimen/dp10"
                        android:layout_height="@dimen/dp6"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp5"
                        android:visibility="visible"
                        app:srcCompat="@drawable/blue_dot" />

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/childContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp2"
                        android:textColor="@color/dose_completed"
                        android:textSize="@dimen/sp14"
                        android:typeface="sans"
                        tools:text="Excessive Sweating" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>