<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp12"
    android:layout_marginRight="@dimen/dp40"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:paddingTop="@dimen/dp3"
        android:id="@+id/menuBottomLayout"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/menuBottomIcon"
            android:src="@drawable/dashboard_alerts_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.rescribe.ui.customesViews.CustomTextView
            android:id="@+id/bottomMenuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tagColor"
            android:textSize="@dimen/sp10"
            android:paddingTop="@dimen/dp5"
            tools:text="@string/alerts"
            android:layout_gravity="center"
            app:customFont="@string/roboto_regular" />

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/rectangle_4"
            android:paddingTop="@dimen/dp4"
            android:id="@+id/bottomMenuTab"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    </LinearLayout>