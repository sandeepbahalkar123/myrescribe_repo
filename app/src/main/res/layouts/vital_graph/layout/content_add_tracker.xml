<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_tracker">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tagColor"
        android:orientation="vertical"
        android:padding="@dimen/dp6">

        <com.rescribe.ui.customesViews.EditTextWithDeleteButton
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="@dimen/dp4"
            android:gravity="center"
            android:inputType="text"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:visibility="visible"
            app:deleteButtonRes="@drawable/close"
            app:hintText="@string/search" />

        <TextView
            android:id="@+id/whiteUnderLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/white"
            android:visibility="visible" />
    </LinearLayout>

    <include
        layout="@layout/global_recycle_view_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
