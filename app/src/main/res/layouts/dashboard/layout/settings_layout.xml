<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rescribe.ui.activities.NotificationActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <!-- <include

         layout="@layout/content_notification" />
 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:visibility="invisible"
            android:id="@+id/sliderView"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <com.rescribe.ui.customesViews.NonSwipeableViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="220dp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPagerDoctorItem"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp16"
                android:visibility="invisible" />
        </FrameLayout>

        <View
            android:visibility="invisible"
            android:id="@+id/dividerView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/sliderView"
            android:background="@color/divider" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/menuOptionsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_above="@+id/doctorOptionsView"
            android:layout_below="@+id/dividerView"
            android:dividerHeight="1dp">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/doctorOptionsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#2a2a2a"
            android:orientation="vertical">
            <include layout="@layout/doctor_options" />

        </LinearLayout>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/menuIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp10"
            android:paddingEnd="@dimen/dp12"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:paddingStart="@dimen/dp12"
            android:paddingTop="@dimen/dp10"
            android:src="@drawable/menu_button_3_x" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
