<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/date"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text="asdas"
        android:textColor="#EE040404"
        android:textSize="18sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="@dimen/dp10"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <com.myrescribe.ui.customesViews.CircularImageView
            android:id="@+id/circularBullet"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp10"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circular_bullet"
            android:visibility="visible" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.myrescribe.ui.customesViews.ReadMoreTextView
                android:id="@+id/doctorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asasdas\nsdfsdf\nsdasdasdasdasdfsd"
                app:colorClickableText="@color/apply_blue"
                app:trimCollapsedText="@string/read_more"
                app:trimExpandedText="@string/read_less" />

        </FrameLayout>

        <TextView
            android:id="@+id/doctorID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="pandhurkar"
            android:textColor="#EE040404" />
    </LinearLayout>
</LinearLayout>