<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@color/Gray"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/md_baseline"
                android:gravity="center">

                <com.rescribe.ui.customesViews.CircularImageView
                    android:id="@+id/profileImage"
                    android:layout_width="@dimen/dp120"
                    android:layout_height="@dimen/dp120"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/advice" />

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="@dimen/dp48"
                    android:layout_height="@dimen/dp48"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="-30dp"
                    android:layout_toRightOf="@+id/profileImage"
                    android:background="@android:drawable/star_big_off"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    tools:text="+10" />

            </RelativeLayout>

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Dr. Sandeep Patil"
                android:textColor="@color/recentblue"
                android:textSize="@dimen/sp18"
                android:textStyle="bold"
                android:typeface="sans" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorSpecialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:gravity="center"
                android:text="Cardilogist"
                android:textColor="@color/dose_completed"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.rescribe.ui.customesViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_doctor"
                app:customFont="@string/roboto_medium" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/aboutDoctorDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdasd\nasda\n\nasdas"
                app:customFont="@string/roboto_medium" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/select_doctor"
                android:drawablePadding="@dimen/dp6"
                android:gravity="center|left"
                android:text="asdasd"
                app:customFont="@string/roboto_medium" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorFees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/select_doctor"
                android:drawablePadding="@dimen/dp6"
                android:gravity="center|left"
                android:text="asdasd"
                app:customFont="@string/roboto_medium" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorPractices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/select_doctor"
                android:drawablePadding="@dimen/dp6"
                android:gravity="center|left"
                android:text="asdasd\nsdf"
                app:customFont="@string/roboto_medium" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>