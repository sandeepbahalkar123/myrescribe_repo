<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp30"
        android:paddingRight="@dimen/dp30">
        <!--  FullName Label -->

        <EditText
            android:id="@+id/editTextMobileNo"
            style="@style/AppLoginMainStyle"
            android:hint="@string/enter_mobile_no"
            android:inputType="text"
            android:maxLength="10" />
        <!--  Email Label -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/recentblue" />

        <EditText
            android:id="@+id/editTextPassword"
            style="@style/AppLoginMainStyle"
            android:hint="@string/enter_password"
            android:inputType="textPassword" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/recentblue" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_marginTop="@dimen/dp30"
            android:background="@color/recentblue"
            android:gravity="center"
            android:text="@string/log_in"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />

        <TextView
            style="@style/AppLoginMainStyle"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/forgot_password"
            android:textAllCaps="false"
            android:textColor="@color/Gray"
            android:textSize="@dimen/sp10" />

        <!--*****************-->
        <Button
            android:id="@+id/buttonLoginFacebook"
            style="@style/AppLoginMainStyle"
            android:layout_height="@dimen/dp30"
            android:layout_marginTop="@dimen/dp8"
            android:background="@drawable/button_curve_background"
            android:gravity="center"
            android:text="@string/loginfb"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonLoginGPlus"
            style="@style/AppLoginMainStyle"
            android:layout_height="@dimen/dp30"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginTop="@dimen/dp8"
            android:background="@drawable/button_curve_background"
            android:gravity="center"
            android:text="@string/logingmail"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:visibility="gone" />
        <!--*****************-->
    </LinearLayout>
</ScrollView>



