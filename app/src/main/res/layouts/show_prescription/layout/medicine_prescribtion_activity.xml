<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

   <TextView
       android:id="@+id/textviewNameOfTablet"
       android:layout_width="0dp"
       android:textSize="@dimen/sp16"
       android:layout_height="wrap_content"
       android:text="Convert M1 Forte"
       android:textStyle="bold"
       android:layout_weight="1"
       android:textColor="@color/black"
       android:layout_marginBottom="@dimen/dp6"
       android:layout_marginTop="@dimen/dp6"
       android:layout_marginLeft="@dimen/dp6"
       android:layout_marginRight="@dimen/dp2"
      />
            <TextView
                android:layout_width="0dp"
                android:textSize="@dimen/sp16"
                android:layout_height="wrap_content"
                android:text="1BB"
                android:drawableLeft="@mipmap/sunset"
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_marginTop="@dimen/dp6"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_marginRight="@dimen/dp2"
                />
            <TextView
                android:layout_width="0dp"
                android:textSize="@dimen/sp16"
                android:layout_height="wrap_content"
                android:text="1AL"
                android:drawableLeft="@mipmap/sun"
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_marginTop="@dimen/dp6"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_marginRight="@dimen/dp2"
                />
            <TextView
                android:layout_width="0dp"
                android:textSize="@dimen/sp16"
                android:layout_height="wrap_content"
                android:text="1BD"
                android:drawableLeft="@mipmap/night"
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_marginTop="@dimen/dp6"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_marginRight="@dimen/dp2"
                />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="80 days"
        android:textStyle="bold"
        android:textSize="@dimen/sp16"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:gravity="end"
        android:layout_marginBottom="@dimen/dp6"
        android:layout_marginTop="@dimen/dp6"
        android:layout_marginLeft="@dimen/dp2"
        android:layout_marginRight="@dimen/dp2"

   />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:id="@+id/textviewTabletLabel"
            android:layout_height="wrap_content"
            android:text="@string/tablet"
            android:layout_weight="1"
            android:textSize="@dimen/sp16"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dp6"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_marginRight="@dimen/dp6"
            />
        <TextView
            android:id="@+id/textviewDisplayDates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp6"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_marginRight="@dimen/dp6"

            />
    </LinearLayout>

    <include
        android:id="@+id/expandPrescriptionView"
        android:visibility="gone"
        layout="@layout/expanded_medicine_prescribtion_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
</android.support.v7.widget.CardView>