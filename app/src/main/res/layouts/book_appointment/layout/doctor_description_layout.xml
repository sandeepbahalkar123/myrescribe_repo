<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/doc_detail_header_bg"
                    android:orientation="vertical"
                    android:padding="@dimen/md_baseline"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp10"
                        android:gravity="center">

                        <com.rescribe.ui.customesViews.CircularImageView
                            android:id="@+id/profileImage"
                            android:layout_width="@dimen/dp120"
                            android:layout_height="@dimen/dp120"
                            android:clickable="true"
                            android:scaleType="centerCrop" />

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/docRating"
                            style="@style/Base.TextAppearance.AppCompat.Body2"
                            android:layout_width="@dimen/dp48"
                            android:layout_height="@dimen/dp48"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="-30dp"
                            android:layout_toRightOf="@+id/profileImage"
                            android:background="@drawable/star"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="+10"
                            android:textColor="@android:color/white"
                            android:textSize="11sp" />

                    </RelativeLayout>

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/clinicName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/recentblue"
                        android:textSize="@dimen/sp18"
                        app:customFont="@string/roboto_bold"
                        tools:text="Dr. Patil" />

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doctorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/recentblue"
                        android:textSize="@dimen/sp18"
                        app:customFont="@string/roboto_bold"
                        tools:text="Dr. Patil" />

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doctorSpecialization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dip"
                        android:gravity="center"
                        android:textColor="@color/dose_completed"
                        android:textSize="@dimen/sp14"
                        app:customFont="@string/roboto_medium"
                        tools:text="Cardilogist" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp9"
                    android:orientation="vertical">

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/addressOfClinic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/tagColor"
                        android:textSize="@dimen/sp14"
                        app:customFont="@string/roboto_medium"
                        tools:text="@string/about_doctor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp9"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/locationImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:visibility="visible"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/allTimingListViewLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp10" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/allTimeSlotListView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@null"
                            android:dividerHeight="0dp"
                            android:paddingBottom="@dimen/dp2"
                            android:visibility="visible"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                        <TextView
                            android:id="@+id/viewAllClinicsOnMap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:paddingRight="@dimen/dp5"
                            android:text="@string/view_all" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp10"
                    android:orientation="vertical">

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/aboutDoctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp10"
                        android:text="@string/about_doctor"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp16"
                        app:customFont="@string/roboto_medium" />

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/aboutDoctorDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp10"
                        android:textColor="@color/about_doctor_color"
                        android:textSize="@dimen/sp14"
                        app:customFont="@string/roboto_regular"
                        tools:text="Lorem \n\n" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp10">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/doc_experience" />
                        </LinearLayout>

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/doctorExperience"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:paddingLeft="@dimen/dp5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp15"
                            app:customFont="@string/roboto_regular"
                            tools:text="asdassdfd" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp10">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.047"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ruppee" />
                        </LinearLayout>


                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/doctorFees"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:paddingLeft="@dimen/dp5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp15"
                            app:customFont="@string/roboto_regular"
                            tools:text="asdasd" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.01"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/hospital_practices" />
                        </LinearLayout>

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/doctorPractices"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:paddingLeft="@dimen/dp5"
                            android:text="@string/also_practices"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp13"
                            app:customFont="@string/roboto_regular" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bookAppointmentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/clickHere"
            android:text="@string/book_appointment"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>