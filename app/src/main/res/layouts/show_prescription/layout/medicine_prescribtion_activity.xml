<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/medicineName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp2"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_marginRight="@dimen/dp2"
                android:layout_marginTop="@dimen/dp6"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16"
                app:customFont="@string/helvetica_demi_bold"

                />



            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp2"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_marginStart="@dimen/dp2"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginTop="@dimen/dp6"
                android:layout_weight="1"
                android:gravity="end"
                android:text="80 days"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:textStyle="bold"
                app:customFont="@string/helvetica_demi_bold"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/textviewTabletLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_marginRight="@dimen/dp6"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textColor="@color/tablet_color"
                android:textSize="@dimen/sp14"
                app:customFont="@string/helvetica_normal" />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp05"
            android:layout_margin="@dimen/dp6"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp2"
                    android:layout_marginLeft="@dimen/dp2"
                    android:visibility="visible"
                    android:id="@+id/relativeLayoutShowBreakfastIcon"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageViewMorningDose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="centerInside"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp2"
                    android:layout_marginLeft="@dimen/dp2"
                    android:visibility="visible"
                    android:id="@+id/relativeLayoutShowLunchIcon"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageViewAfternoonDose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="centerInside"
                         />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp2"
                    android:layout_marginLeft="@dimen/dp2"
                    android:visibility="visible"
                    android:id="@+id/relativeLayoutShowDinnerIcon"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/imageViewNightDose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="centerInside"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">


                <View
                    android:layout_width="@dimen/dp05"
                    android:layout_height="@dimen/dp50"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp8"
                    android:background="@color/grey" />

                <TextView
                    android:id="@+id/doseQuantityNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp2"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dp2"
                    android:layout_marginLeft="@dimen/dp2"
                    android:textColor="@color/BlueAngel"
                    android:textSize="@dimen/sp28"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <com.myrescribe.ui.customesViews.CustomTextView
                        android:id="@+id/dosePeriod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp2"
                        android:layout_marginLeft="@dimen/dp2"
                        android:layout_marginRight="@dimen/dp6"
                        android:layout_marginTop="@dimen/dp6"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp12"
                        app:customFont="@string/helvetica_demi_bold" />

                    <com.myrescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doseSlot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp2"
                        android:layout_marginLeft="@dimen/dp2"
                        android:layout_marginRight="@dimen/dp6"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp14"
                        app:customFont="@string/helvetica_demi_bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/highlightedInstructionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp05"
                android:layout_margin="@dimen/dp6"
                android:background="@color/grey" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:orientation="horizontal">

                <com.myrescribe.ui.customesViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp12"
                    android:layout_marginRight="@dimen/dp6"
                    android:layout_marginTop="@dimen/dp6"
                    android:text="@string/instructions"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold"
                    app:customFont="@string/helvetica_demi_bold" />

                <com.myrescribe.ui.customesViews.CustomTextView
                    android:id="@+id/textViewhightlightInstructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_weight="1"
                    android:lineSpacingExtra="@dimen/dp1"
                    android:text="@string/message_text"
                    android:textColor="@color/instruction_color"
                    android:textSize="@dimen/sp14"
                    app:customFont="@string/helvetica_normal" />

            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/imageViewdownArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:src="@drawable/ic_down"
            android:textStyle="bold"
            android:visibility="gone" />

        <include
            android:id="@+id/expandPrescriptionView"
            layout="@layout/expanded_medicine_prescribtion_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>
</android.support.v7.widget.CardView>