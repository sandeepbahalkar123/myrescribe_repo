<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
   <ImageView
       android:paddingTop="@dimen/dp20"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/support_bg"
       />

    <com.rescribe.ui.customesViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingTop="@dimen/dp12"
        android:textSize="@dimen/sp21"
        app:customFont="@string/roboto_medium"
       android:text="@string/need_some_help" />

    <com.rescribe.ui.customesViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_shade"
        android:textSize="@dimen/sp15"
        android:paddingTop="@dimen/dp14"
        app:customFont="@string/roboto_medium"
        android:text="@string/feel_free" />

    <com.rescribe.ui.customesViews.CustomTextView
        android:layout_width="222dp"
        android:layout_height="40dp"
        android:text="@string/call"
        android:layout_marginTop="@dimen/dp28"
        android:gravity="center"
        android:id="@+id/callTextView"
        app:customFont="@string/roboto_bold"
        android:textSize="@dimen/sp19"
        android:background="@color/tagColor"
        android:textColor="@color/white"/>

    <com.rescribe.ui.customesViews.CustomTextView
        android:layout_width="222dp"
        android:layout_height="40dp"
        android:text="@string/email"
        android:gravity="center"
        android:id="@+id/emailtextView"
        app:customFont="@string/roboto_bold"
        android:textSize="@dimen/sp19"
        android:layout_marginTop="@dimen/dp14"
        android:background="@drawable/type_here_bg"
        android:textColor="@color/tagColor"/>


</LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp24"
       android:layout_gravity="center" >

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/scrog_product"
            />

    </RelativeLayout>
</LinearLayout>