<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:padding="@dimen/dp30"
    android:orientation="vertical">

    <com.rescribe.ui.customesViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_social_login_confirm"
        android:textSize="@dimen/sp16"
        app:customFont="@string/roboto_medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp16"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/salutationSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editTextName" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/editTextName"
                style="@style/AppLoginSocialStyle"
                android:layout_toEndOf="@+id/salutationSpinner"
                android:layout_toRightOf="@+id/salutationSpinner"
                android:hint="@string/name"
                android:inputType="text"
                android:textStyle="bold"
                android:typeface="sans" />

            <View
                android:id="@+id/editTextNameView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_alignEnd="@+id/editTextName"
                android:layout_alignLeft="@+id/editTextName"
                android:layout_alignRight="@+id/editTextName"
                android:layout_alignStart="@+id/editTextName"
                android:layout_below="@+id/editTextName"
                android:background="@color/divider" />

            <View
                android:id="@+id/salutationView"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp1"
                android:layout_alignEnd="@+id/salutationSpinner"
                android:layout_alignLeft="@+id/salutationSpinner"
                android:layout_alignRight="@+id/salutationSpinner"
                android:layout_alignStart="@+id/salutationSpinner"
                android:layout_below="@+id/salutationSpinner"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_marginRight="@dimen/dp12"
                android:background="@color/divider" />

        </RelativeLayout>
        <!--  Email Label -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp41"
            android:layout_marginTop="@dimen/dp4">

            <View
                android:id="@+id/genderView"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp1"
                android:layout_alignEnd="@+id/genderSpinner"
                android:layout_alignLeft="@+id/genderSpinner"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/genderSpinner"
                android:layout_alignStart="@+id/genderSpinner"
                android:background="@color/divider" />

            <!--android:layout_marginEnd="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"-->

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/genderSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/genderView" />

        </RelativeLayout>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editTextAge"
            style="@style/AppLoginSocialStyle"
            android:layout_marginTop="@dimen/dp4"
            android:hint="@string/enter_age"
            android:inputType="number"
            android:textStyle="bold"
            android:typeface="sans" />

        <LinearLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/divider" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/socialLoginEmail"
                style="@style/AppLoginSocialStyle"
                android:layout_marginTop="@dimen/dp4"
                android:hint="@string/enter_email_id"
                android:inputType="textEmailAddress"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/divider" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/socialLoginPassword"
            style="@style/AppLoginSocialStyle"
            android:layout_marginTop="@dimen/dp4"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:typeface="sans" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/divider" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/socialLoginMobileNo"
            style="@style/AppLoginSocialStyle"
            android:layout_marginTop="@dimen/dp4"
            android:hint="@string/enter_mobile_no"
            android:inputType="phone"
            android:textStyle="bold"
            android:typeface="sans" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/divider" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp22"
            android:background="@color/tagColor"
            android:gravity="center"
            android:paddingBottom="@dimen/dp10"
            android:paddingTop="@dimen/dp10"
            android:text="@string/done"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

    </LinearLayout>
</LinearLayout>

