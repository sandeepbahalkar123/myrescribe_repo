<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/date"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        tools:text="23rd "
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textColor="#EE040404"
        android:textSize="18sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="@dimen/dp10"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <com.myrescribe.ui.customesViews.CircularImageView
            android:id="@+id/circularBullet"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp10"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circular_bullet"
            android:visibility="visible" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginTop="@dimen/dp4"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.myrescribe.ui.customesViews.CircularImageView
                android:id="@+id/showPatientIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="top|center_vertical"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_weight="0.5"
                android:src="@drawable/layer_12"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <com.myrescribe.ui.customesViews.CustomTextView
                    android:id="@+id/doctorSpecialization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp4"
                    android:text="Cardiologist"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"
                    app:customFont="@string/roboto_medium" />

                <com.myrescribe.ui.customesViews.CustomTextView
                    android:id="@+id/doctorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp4"
                    android:text="Dr.Suresh Patil"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp20"
                    android:textStyle="bold"
                    app:customFont="@string/roboto_medium" />

                <com.myrescribe.ui.customesViews.CustomTextView
                    android:id="@+id/detailTimeDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp4"
                    android:text="Aundh, Pune"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14"
                    app:customFont="@string/roboto_medium" />
                <View
                    android:id="@+id/headergroupDivider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/divider" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>