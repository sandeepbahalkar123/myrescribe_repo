<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vitalCellLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_weight="1"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp6">

    <ImageView
        android:id="@+id/vitalImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="1dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:padding="5dp">

        <com.rescribe.ui.customesViews.CustomTextView
            android:id="@+id/vital_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textColor="@color/vitals_name"
            android:textSize="@dimen/sp11"
            app:customFont="@string/roboto_bold" />

        <LinearLayout
            android:id="@+id/unitValuesLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="right"
            android:orientation="horizontal">

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/noOfVitals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                tools:text="fgfg"
                android:textColor="@color/black"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                app:customFont="@string/roboto_medium" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>