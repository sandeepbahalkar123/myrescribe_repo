<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp16"
        android:orientation="vertical">

        <com.rescribe.ui.customesViews.CustomTextView
            android:textSize="@dimen/sp16"
            android:textColor="@color/tagColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customFont="@string/roboto_bold"
            android:layout_gravity="center_vertical"
            android:text="@string/relevantkeywords" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

           <com.rescribe.ui.customesViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:text="@string/complaint1"
               app:customFont="@string/roboto_bold"
                android:textColor="@color/tagColor"
                android:textSize="@dimen/sp16" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerComplaint1"
                android:layout_marginLeft="@dimen/dp4"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp16"
               />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/showEditText"
            android:orientation="horizontal">

            <com.rescribe.ui.customesViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:visibility="invisible"
                android:text="@string/complaint1"
                android:textColor="@color/tagColor"
                android:textSize="@dimen/sp16" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
            <EditText
                style="@style/CompalintStyle"
                android:id="@+id/editTextComplaint1"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp16"
                android:gravity="center_vertical"
                android:hint="Enter your complaint here"
                android:inputType="text" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tagColor"
                />
</LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_rectangle_1"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:text="@string/ok"
        android:id="@+id/okButton"
        android:textSize="16sp"
        android:textColor="@color/white" />
</LinearLayout>
