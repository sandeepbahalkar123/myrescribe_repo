<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appointmentItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp6"
    android:layout_marginLeft="@dimen/dp16"
    android:layout_marginRight="@dimen/dp6"
    android:layout_marginTop="@dimen/dp16"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <!--  ListRow Left sied Thumbnail image -->
        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp5"
            android:padding="3dip">

            <com.rescribe.ui.customesViews.CircularImageView
                android:id="@+id/imageURL"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp16"
                android:src="@drawable/layer_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/thumbnail"
            android:layout_toLeftOf="@+id/dateLayout"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_toStartOf="@+id/dateLayout"
            android:gravity="center|left"
            android:orientation="vertical">

            <!-- Title Of Song-->
            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:textColor="@color/dose_completed"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                tools:text="Cardilogist" />

            <!-- Artist Name -->
            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/recentblue"
                android:textSize="@dimen/sp18"
                android:textStyle="bold"
                android:typeface="sans"
                tools:text="Dr. Sandeep Patil" />

            <!-- Rightend Duration -->
            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/dose_completed"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                tools:text="10th July, Aundh, Pune" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dateLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_marginEnd="@dimen/dp5"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp5">

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/appointmentsTimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textColor="@color/dose_completed"
                app:customFont="@string/roboto_bold"
                tools:text="6:30 pm" />

            <ImageView
                android:id="@+id/gMapLocationView"
                android:layout_width="@dimen/dp35"
                android:layout_height="@dimen/dp35"
                android:paddingTop="@dimen/dp6"
                android:src="@drawable/location" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginTop="@dimen/dp16"
        android:background="@color/divider" />
</LinearLayout>