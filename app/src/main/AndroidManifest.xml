<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myrescribe">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".singleton.MyRescribeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.myrescribe.ui.activities.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activities.ViewDetailsActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.activities.ShowMedicineDoseListActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name="com.myrescribe.ui.activities.HomePageActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".ui.activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.myrescribe.ui.activities.LoginMainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>


        <activity
            android:name=".ui.activities.PhoneNoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activities.PreferencesActivity"
            android:label="@string/title_activity_preferences"
            android:theme="@style/AppTheme.NoActionBar" />


        <activity
            android:name=".ui.activities.DoctorListActivity"
            android:label="@string/title_activity_preferences"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <service android:name=".services.NotificationService" />


        <receiver android:name=".broadcast_receivers.NotificationYesClickReceiver" />
        <receiver android:name=".broadcast_receivers.NotificationNoClickReceiver" />

        <service android:name=".services.InvestigationNotificationService" />


        <receiver android:name=".broadcast_receivers.InvestigationNotificationYesClickReceiver" />
        <receiver android:name=".broadcast_receivers.InvestigationNotificationNoClickReceiver" />

        <service android:name=".services.AppointmentNotificationService" />

        <receiver android:name=".broadcast_receivers.AppointmentNotificationNoClickReceiver" />
        <receiver android:name=".broadcast_receivers.AppointmentNotificationYesClickReceiver" />


        <receiver android:name=".broadcast_receivers.StartUpBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>


        <activity
            android:name=".ui.activities.NotificationActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.InvestigationActivity"
            android:label="@string/title_activity_investigation"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.activities.SeletedDocsActivity"
            android:label="@string/title_activity_selected_docs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activities.UploadedDocsActivity"
            android:label="@string/title_activity_uploaded_docs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activities.ZoomImageViewActivity"
            android:label="@string/title_activity_zoomview"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activities.AppoinmentActivity"
            android:label="@string/title_activity_appoinment"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>