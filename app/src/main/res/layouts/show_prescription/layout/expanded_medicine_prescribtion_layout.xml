<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp05"
        android:layout_marginRight="@dimen/dp12"
        android:background="@color/grey" />

    <ImageView
        android:id="@+id/imageViewUpArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:src="@drawable/ic_up"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.myrescribe.ui.customesViews.CustomTextView
            android:id="@+id/morningDose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginBottom="@dimen/dp8"
            android:drawableLeft="@mipmap/black_breakfast"
            android:drawablePadding="@dimen/dp18"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"
            android:visibility="gone"
            app:customFont="@string/helvetica_demi_bold" />

        <com.myrescribe.ui.customesViews.CustomTextView
            android:id="@+id/morningDoseQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp12"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginRight="@dimen/dp12"
            android:layout_weight="0.7"
            android:gravity="left|end"
            android:text=""
            android:textColor="@color/tablet_color"
            android:textSize="@dimen/sp16"
            android:visibility="gone"
            app:customFont="@string/helvetica_normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.myrescribe.ui.customesViews.CustomTextView
            android:id="@+id/afternoonDose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginBottom="@dimen/dp8"
            android:drawableLeft="@mipmap/black_lunch"
            android:drawablePadding="@dimen/dp20"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"
            android:visibility="gone"
            app:customFont="@string/helvetica_demi_bold" />

        <com.myrescribe.ui.customesViews.CustomTextView
            android:id="@+id/afternoonDoseQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:layout_weight="0.7"
            android:layout_marginBottom="@dimen/dp8"
            android:gravity="left|end"
            android:text=""
            android:textColor="@color/tablet_color"
            android:textSize="@dimen/sp16"
            android:visibility="gone"
            app:customFont="@string/helvetica_normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >

        <com.myrescribe.ui.customesViews.CustomTextView
            android:id="@+id/nightDose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@mipmap/black_night"
            android:drawablePadding="@dimen/dp20"
            android:gravity="center_vertical"
            android:text=""
            android:layout_marginBottom="@dimen/dp16"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"
            android:visibility="gone"
            app:customFont="@string/helvetica_demi_bold" />

        <com.myrescribe.ui.customesViews.CustomTextView
            android:id="@+id/nightDoseQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:layout_weight="0.7"
            android:layout_marginBottom="@dimen/dp16"
            android:gravity="left|end"
            android:text=""
            android:textColor="@color/tablet_color"
            android:textSize="@dimen/sp16"
            android:visibility="gone"
            app:customFont="@string/helvetica_normal" />

    </LinearLayout>


<LinearLayout
    android:id="@+id/detailedInstructions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp05"
        android:layout_marginRight="@dimen/dp12"
        android:background="@color/grey" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.myrescribe.ui.customesViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp6"
            android:layout_marginTop="@dimen/dp8"
            android:text="@string/instructions"
            android:textColor="@color/black"
            android:textSize="@dimen/sp12"
            android:textStyle="bold"
            app:customFont="@string/helvetica_demi_bold" />

        <com.myrescribe.ui.customesViews.CustomTextView
            android:id="@+id/tv_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginStart="@dimen/dp4"
            android:layout_weight="1"
            android:textColor="@color/instruction_color"
            android:textSize="@dimen/sp14"
            app:customFont="@string/helvetica_normal" />

    </LinearLayout>
</LinearLayout>


