<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/followUpViewLayout"
    android:background="@drawable/notification_bg"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            app:srcCompat="@drawable/followup_icon_white" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/notification_bg_grey"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp8"
        android:paddingRight="@dimen/dp8">

        <com.rescribe.ui.customesViews.CustomTextView
            android:id="@+id/textMessageTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="@dimen/dp4"
            android:textColor="@color/grey_shade"
            android:textSize="@dimen/sp11"
            app:customFont="@string/roboto_medium"
            tools:text="2:00 am"
            tools:visibility="invisible" />

        <com.rescribe.ui.customesViews.CustomTextView
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp4"
            android:textColor="@color/black"
            android:textSize="@dimen/sp13"
            app:customFont="@string/roboto_medium"
            android:text="Consult Dr. Raj Kotgire on 15-Feb-2018 for treatment follow-up" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp5">

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/bookButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingBottom="@dimen/dp13"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:paddingTop="@dimen/dp10"
                android:text="@string/book"
                android:textAllCaps="true"
                android:textColor="@color/statusbar"
                android:textSize="@dimen/sp12"
                app:customFont="@string/roboto_medium" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/skipButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp5"
                android:gravity="right"
                android:paddingBottom="@dimen/dp13"
                android:paddingLeft="@dimen/dp5"
                android:paddingStart="@dimen/dp5"
                android:paddingTop="@dimen/dp10"
                android:text="@string/skip"
                android:textColor="@color/no_color"
                android:textSize="@dimen/sp12"
                android:visibility="visible"
                app:customFont="@string/roboto_medium" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>