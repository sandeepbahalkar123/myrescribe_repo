<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clickOnDoctorVisitLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/childSideBarView"
        android:layout_width="@dimen/dp4"
        android:layout_height="match_parent"
        android:background="@color/transparent" />

    <LinearLayout
        android:id="@+id/parentDataContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp6">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.14"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="@dimen/dp32"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/upperLine"
                android:layout_width="@dimen/dp1"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/recentblue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cardDetailsBullet"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp6"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_marginRight="@dimen/dp5"
                android:src="@drawable/blue_dot"
                android:visibility="visible" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/childContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingBottom="@dimen/dp2"
                android:text="Excessive Sweating"
                android:textColor="@color/dose_completed"
                android:textSize="@dimen/sp14"
                android:typeface="sans" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/dp2"
                android:paddingRight="@dimen/dp30"
                android:src="@drawable/attachment" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>