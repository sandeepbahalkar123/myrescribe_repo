<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detailsLayout"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingTop="@dimen/dp10"
                app:srcCompat="@drawable/support_bg" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp12"
                android:text="@string/need_some_help"
                android:textColor="@color/black"
                android:textSize="@dimen/sp20"
                app:customFont="@string/roboto_medium" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp8"
                android:text="@string/feel_free"
                android:textColor="@color/grey_shade"
                android:textSize="@dimen/sp14"
                app:customFont="@string/roboto_medium" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/callTextView"
                android:layout_width="222dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/dp8"
                android:background="@drawable/call_bg"
                android:gravity="center"
                android:text="@string/call"
                android:textColor="@color/white"
                android:textSize="@dimen/sp19"
                app:customFont="@string/roboto_bold" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/emailtextView"
                android:layout_width="222dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/type_here_bg"
                android:gravity="center"
                android:text="@string/email"
                android:textColor="@color/tagColor"
                android:textSize="@dimen/sp19"
                app:customFont="@string/roboto_bold" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/detailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp9"
        android:gravity="center"
        android:orientation="vertical">

        <com.rescribe.ui.customesViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Rescribe is a unique product of"
            android:textSize="@dimen/sp13"
            app:customFont="@string/roboto_regular"
            app:srcCompat="@drawable/scrog_product" />

        <com.rescribe.ui.customesViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/company_name"
            android:textSize="@dimen/sp13"
            app:customFont="@string/roboto_regular"
            app:srcCompat="@drawable/scrog_product" />

        <com.rescribe.ui.customesViews.CustomTextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp13"
            app:customFont="@string/roboto_regular"
            app:srcCompat="@drawable/scrog_product"
            tools:text="v1.1(4)" />

    </LinearLayout>

</RelativeLayout>