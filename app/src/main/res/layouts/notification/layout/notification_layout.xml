<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificationLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">


    <ImageView
        android:id="@+id/bigIcon"
        android:layout_width="@dimen/dp40"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:padding="@dimen/dp2"
        android:layout_marginStart="@dimen/dp4"
        android:layout_marginLeft="@dimen/dp4"
        android:src="@drawable/notification_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/bigIcon"
        android:layout_toRightOf="@+id/bigIcon"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8"
        android:paddingLeft="@dimen/dp8"
        android:paddingStart="@dimen/dp8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/dp8"
            android:paddingRight="@dimen/dp8">

            <TextView
                android:id="@+id/showMedicineName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Rx Medicine" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                tools:text="8:00pm" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/questionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/instruction_color"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/buttonYes"
                android:layout_toStartOf="@+id/buttonYes"
                android:textSize="@dimen/sp12"
                tools:text="@string/dummy" />

            <ImageView
                android:id="@+id/buttonYes"
                android:layout_width="@dimen/dp56"
                android:layout_height="@dimen/dp50"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/unchked" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
