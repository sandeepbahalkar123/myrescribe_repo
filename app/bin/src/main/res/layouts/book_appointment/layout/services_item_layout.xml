<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerViewClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp10">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/showVitalUnitNameIconLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp40"
            android:background="@drawable/rounded_rectangle_1_copy"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/serviceNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp20"
                android:textColor="@color/black"
                android:textSize="@dimen/sp15"
                app:customFont="@string/roboto_medium"
                tools:text="Doctor" />

        </LinearLayout>

        <ImageView
            android:id="@+id/serviceIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ellipse_1_copy"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/pharmacy_icon" />

    </FrameLayout>


</LinearLayout>
