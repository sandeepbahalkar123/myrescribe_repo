<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/dp6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:id="@+id/vitalCellLinearLayout"
        android:background="@drawable/border"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vitalImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="22dp"
            android:src="@drawable/remarks" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:layout_margin="1dp"
            android:gravity="center_vertical"
            android:padding="5dp">

            <com.rescribe.ui.customesViews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:id="@+id/vital_name"
                android:textColor="@color/vitals_name"
                android:textSize="@dimen/sp12"
                app:customFont="@string/roboto_bold"/>
            <LinearLayout
                android:id="@+id/unitValuesLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="0.4"
                android:orientation="horizontal">
                <com.rescribe.ui.customesViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/noOfVitals"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:customFont="@string/roboto_medium" />
                <com.rescribe.ui.customesViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/measure_of_vitals_color"
                    android:paddingLeft="@dimen/dp4"
                    android:layout_alignBaseline="@id/vital_name"
                    app:customFont="@string/roboto_bold"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>