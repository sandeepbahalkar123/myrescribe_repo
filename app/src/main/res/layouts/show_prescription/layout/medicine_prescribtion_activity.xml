<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/doseImageLinearLayout"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp12"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/medicineType"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp2"
            android:layout_marginTop="@dimen/dp6">

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/medicineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp17"
                app:customFont="@string/roboto_bold"
                />

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp4"
                android:textColor="@color/black"
                android:textSize="@dimen/sp12"
                app:customFont="@string/roboto_bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewMorningDose"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/dp8"
                    android:src="@drawable/breakfast_grey"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imageViewAfternoonDose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp8"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/lunch_grey"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/imageViewEveningDose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp8"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/evening_grey"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imageViewNightDose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/dp8"
                    android:paddingRight="@dimen/dp8"
                    android:src="@drawable/night_grey"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <View
                    android:layout_width="@dimen/dp2"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp4"
                    android:layout_marginRight="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp4"
                    android:background="@color/divider" />

                <com.myrescribe.ui.customesViews.CustomTextView
                    android:id="@+id/doseQuantityNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp2"
                    android:layout_weight="1"
                    android:text="2"
                    android:gravity="right"
                    android:paddingRight="@dimen/dp4"
                    app:customFont="@string/roboto_bold"
                    android:textColor="@color/BlueAngel"
                    android:textSize="@dimen/sp34"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <com.myrescribe.ui.customesViews.CustomTextView
                        android:id="@+id/dosePeriod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:textColor="@color/instruction_color"
                        android:textSize="@dimen/sp12"
                        app:customFont="@string/roboto_bold" />

                    <com.myrescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doseSlot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp4"
                        android:textColor="@color/instruction_color"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp12"
                        app:customFont="@string/roboto_bold" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/highlightedInstructionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp4"
                android:layout_marginTop="@dimen/dp4">

                <com.myrescribe.ui.customesViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/instructions"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp10"
                    android:textStyle="bold"
                    app:customFont="@string/roboto_medium" />

                <com.myrescribe.ui.customesViews.CustomTextView
                    android:id="@+id/textViewhightlightInstructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp4"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_weight="1"
                    android:lineSpacingExtra="@dimen/dp1"
                    android:textColor="@color/instruction_color"
                    android:textSize="@dimen/sp8"
                    app:customFont="@string/roboto_medium" />


            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/expandPrescriptionView"
            layout="@layout/expanded_medicine_prescribtion_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>