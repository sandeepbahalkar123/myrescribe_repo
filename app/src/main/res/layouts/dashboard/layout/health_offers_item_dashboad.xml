<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp8"
    android:layout_marginLeft="@dimen/dp4"
    android:layout_marginRight="@dimen/dp4"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/showVitalUnitNameIconLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edge_white"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/fees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ruppee_dashboard"
                    android:drawablePadding="@dimen/dp4"
                    android:gravity="center_vertical"
                    android:paddingTop="14dp"
                    android:text="1799"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:customFont="@string/roboto_bold" />

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/discountAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ruppee_blue"
                    android:text="1583"
                    android:textColor="@color/tagColor"
                    android:textSize="18sp"
                    app:customFont="@string/roboto_medium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/percentOff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="bottom"
                        android:text="1799%"
                        android:textColor="@color/green_percent"
                        android:textSize="14sp"
                        app:customFont="@string/roboto_bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@color/grey_hint_color"
                        android:paddingBottom="4dp"
                        android:paddingLeft="2dp"
                        android:src="@drawable/down" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/saleImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:background="@color/grey_hint_color"
                    android:src="@drawable/metro_logo" />
            </LinearLayout>

            <ImageView
                android:id="@+id/vitalImageDialog"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/dp10"
                android:src="@drawable/sale" />

        </FrameLayout>


        <LinearLayout
            android:id="@+id/bpMinLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp16"
                android:orientation="vertical">


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>