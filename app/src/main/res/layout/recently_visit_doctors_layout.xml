<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="horizontal">
        <!--  ListRow Left sied Thumbnail image -->
        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dp5"
            android:padding="3dip">

            <com.rescribe.ui.customesViews.CircularImageView
                android:id="@+id/imageURL"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp16"
                android:src="@drawable/layer_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">

            <!-- Title Of Song-->
            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_marginTop="1dip"
                android:text="Cardilogist"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <!-- Artist Name -->
            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctorType"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="Dr. Sandeep Patil"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                android:textStyle="bold"
                android:typeface="sans" />

            <!-- Rightend Duration -->
            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctorName"
                android:layout_toRightOf="@+id/thumbnail"
                android:gravity="right"
                android:text="10th July, Aundh, Pune"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/appointmentsTimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp16"
                android:text="6:30 pm"
                android:textAllCaps="false"
                android:textColor="@color/dose_completed"
                app:customFont="@string/roboto_bold" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginTop="@dimen/dp16"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="@string/recently_visit_doctor"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginLeft="@dimen/dp4"
                android:layout_marginRight="@dimen/dp16"
                android:layout_marginTop="@dimen/dp16"
                android:text="2.1 Km"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginLeft="@dimen/dp4"
                android:layout_marginRight="@dimen/dp16"
                android:layout_marginTop="@dimen/dp16"
                android:text="2.1 Km"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>