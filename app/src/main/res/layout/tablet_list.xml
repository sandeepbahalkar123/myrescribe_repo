<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/dp10"
    android:paddingEnd="@dimen/horizontal_margin"
    android:paddingStart="@dimen/horizontal_margin">

    <ImageView
        android:id="@+id/tabTypeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/capsule_01" />

    <com.myrescribe.ui.customesViews.CustomTextView
        android:id="@+id/tabNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tabTypeView"
        android:layout_toLeftOf="@+id/tabCountTextView"
        android:layout_toRightOf="@+id/tabTypeView"
        android:layout_toStartOf="@+id/tabCountTextView"
        android:paddingEnd="@dimen/dp6"
        android:paddingRight="@dimen/dp6"
        android:paddingStart="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        tools:text="Rantac"
        android:textColor="@color/black"
        android:textSize="@dimen/sp18"
        app:customFont="@string/roboto_bold" />

    <com.myrescribe.ui.customesViews.CustomTextView
        android:id="@+id/tabCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/dp26"
        android:layout_toLeftOf="@+id/selectViewTab"
        android:layout_toStartOf="@+id/selectViewTab"
        android:textColor="@color/black"
        app:customFont="@string/roboto_bold"
        android:textSize="@dimen/sp20" />

    <CheckBox
        android:id="@+id/selectViewTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/dp10"
        android:paddingEnd="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginStart="@dimen/dp20"
        android:button="@drawable/checkboxselecter" />

</RelativeLayout>