<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/medicineName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp2"
                android:layout_marginRight="@dimen/dp2"
                android:layout_marginTop="@dimen/dp6"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16"
                app:customFont="@string/helvetica_demi_bold"

                />

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp2"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_marginRight="@dimen/dp12"
                android:layout_marginTop="@dimen/dp6"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:textStyle="bold"
                app:customFont="@string/helvetica_demi_bold"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/textviewTabletLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp6"
                android:layout_weight="0.5"
                android:textColor="@color/tablet_color"
                android:textSize="@dimen/sp14"
                android:textStyle="bold"
                app:customFont="@string/helvetica_normal" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp05"
            android:layout_marginRight="@dimen/dp12"
            android:layout_marginTop="@dimen/dp2"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewMorningDose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imageViewAfternoonDose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imageViewNightDose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <View
                    android:layout_width="@dimen/dp05"
                    android:layout_height="@dimen/dp50"
                    android:layout_marginBottom="@dimen/dp4"
                    android:layout_marginRight="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp4"
                    android:background="@color/grey" />

                <TextView
                    android:id="@+id/doseQuantityNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginBottom="@dimen/dp2"
                    android:layout_marginLeft="@dimen/dp2"
                    android:layout_marginTop="@dimen/dp2"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/dp4"
                    android:textColor="@color/BlueAngel"
                    android:textSize="@dimen/sp28"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <com.myrescribe.ui.customesViews.CustomTextView
                        android:id="@+id/dosePeriod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dp2"
                        android:layout_marginTop="@dimen/dp6"
                        android:textSize="@dimen/sp12"
                        app:customFont="@string/helvetica_demi_bold" />

                    <com.myrescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doseSlot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dp2"
                        android:textSize="@dimen/sp14"
                        app:customFont="@string/helvetica_demi_bold" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewdownArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:srcCompat="@drawable/ic_down"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/highlightedInstructionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp05"
                android:layout_marginRight="@dimen/dp12"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.myrescribe.ui.customesViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp8"
                    android:text="@string/instructions"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold"
                    app:customFont="@string/helvetica_demi_bold" />

                <com.myrescribe.ui.customesViews.CustomTextView
                    android:id="@+id/textViewhightlightInstructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp8"
                    android:layout_marginLeft="@dimen/dp4"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_weight="1"
                    android:lineSpacingExtra="@dimen/dp1"
                    android:textColor="@color/instruction_color"
                    android:textSize="@dimen/sp14"
                    app:customFont="@string/helvetica_normal" />

                <ImageView
                    android:id="@+id/imageViewInstructiondownArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:srcCompat="@drawable/ic_down"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/expandPrescriptionView"
            layout="@layout/expanded_medicine_prescribtion_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>
</android.support.v7.widget.CardView>