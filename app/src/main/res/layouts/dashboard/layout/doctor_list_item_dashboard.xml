<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp">

    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp6"
            android:background="@drawable/white_round_rect"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/doctorCategoryVisit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp8"
                    android:paddingLeft="@dimen/dp2"
                    android:paddingTop="@dimen/dp8"
                    android:text="My Appointments"
                    android:textColor="@color/greyish"
                    android:textSize="12sp"
                    app:customFont="@string/roboto_regular" />

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/feesToPaidVisit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ruppee_dashboard"
                    android:drawablePadding="@dimen/dp2"
                    android:gravity="right"
                    android:text="500"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:customFont="@string/roboto_bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/filled_favorite_red" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center|top"
                    android:layout_marginRight="@dimen/dp5"
                    android:padding="3dip">

                    <com.rescribe.ui.customesViews.CircularImageView
                        android:id="@+id/imageURL"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:src="@drawable/layer_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doctorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/doctorType"
                        android:layout_toRightOf="@+id/thumbnail"
                        android:text="Dr. Sandeep Patil"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12"
                        app:customFont="@string/roboto_bold" />
                    <!-- Title Of Song-->
                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doctorType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/thumbnail"
                        android:layout_marginTop="1dip"
                        android:text="Cardilogist"
                        android:textColor="@color/greyish"
                        android:textSize="10sp"
                        app:customFont="@string/roboto_medium" />

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doctorExperience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/doctorName"
                        android:layout_toRightOf="@+id/thumbnail"
                        android:gravity="right"
                        android:text="10 years of experience "
                        android:textColor="@color/greyish"
                        android:textSize="10sp"
                        app:customFont="@string/roboto_medium" />
                    <!-- Rightend Duration -->
                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doctorAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/doctorName"
                        android:layout_toRightOf="@+id/thumbnail"
                        android:gravity="right"
                        android:paddingBottom="@dimen/dp20"
                        android:text="Aundh, Pune"
                        android:textColor="@color/greyish"
                        android:textSize="10sp"
                        app:customFont="@string/roboto_medium" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginLeft="@dimen/dp56"
            android:gravity="center">

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/recentVisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/visited_dr"
                android:gravity="center"
                android:padding="0dp" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
