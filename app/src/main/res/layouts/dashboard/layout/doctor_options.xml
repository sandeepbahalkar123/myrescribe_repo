<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp12"
    android:weightSum="5"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="@dimen/dp3"
        android:id="@+id/alertsLayout"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <ImageView
                android:layout_gravity="center"
                android:id="@+id/alertsIcon"
                android:src="@drawable/dashboard_alerts_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/alerts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tagColor"
                android:textSize="@dimen/sp10"
                android:paddingTop="@dimen/dp5"
                android:text="@string/alerts"
                android:layout_gravity="center"
                app:customFont="@string/roboto_regular" />

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/rectangle_4"
            android:paddingTop="@dimen/dp4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/profileLayout"
        android:layout_weight="1"
        android:paddingTop="@dimen/dp3"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/profileImage"
            android:src="@drawable/dashboard_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.rescribe.ui.customesViews.CustomTextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/menu_option_on_dashboard_lower_color"
            android:textSize="@dimen/sp10"
            android:text="@string/profile"
            android:paddingTop="@dimen/dp5"
            android:layout_gravity="center"
            app:customFont="@string/roboto_regular" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/logoLayout"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/appLogo"
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/settingLayout"
        android:layout_weight="1"
        android:paddingTop="@dimen/dp3"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/settingIcon"
            android:src="@drawable/dashboard_setting_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.rescribe.ui.customesViews.CustomTextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/menu_option_on_dashboard_lower_color"
            android:textSize="@dimen/sp10"
            android:paddingTop="@dimen/dp5"
            android:text="@string/settings"
            android:layout_gravity="center"
            app:customFont="@string/roboto_regular" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/supportLayout"
        android:layout_weight="1"
        android:paddingTop="@dimen/dp3"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/supportIcon"
            android:src="@drawable/dashboard_support_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.rescribe.ui.customesViews.CustomTextView
            android:id="@+id/support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/menu_option_on_dashboard_lower_color"
            android:textSize="@dimen/sp10"
            android:text="@string/support"
            android:paddingTop="@dimen/dp5"
            android:layout_gravity="center"
            app:customFont="@string/roboto_regular" />

    </LinearLayout>
</LinearLayout>
