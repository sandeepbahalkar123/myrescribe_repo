<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp4"
    android:layout_marginLeft="@dimen/dp6"
    android:layout_marginRight="@dimen/dp6"
    android:layout_marginTop="@dimen/dp4"
    android:background="@drawable/curve_white_back"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/doctorlistCardLinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/blueLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/result_blue_line" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorCategoryType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp8"
                android:layout_toRightOf="@id/blueLine"
                android:background="@drawable/rounded_rectangle_8"
                android:drawableLeft="@drawable/premium_icon"
                android:drawablePadding="@dimen/dp4"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp4"
                android:paddingRight="@dimen/dp4"
                android:text="Premium"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14"
                app:customFont="@string/roboto_medium" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10">

                <ImageView
                    android:id="@+id/ruppessIcon"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dashboard_big_black_ruppee" />

                <com.rescribe.ui.customesViews.CustomTextView
                    android:id="@+id/doctorFee"
                    android:layout_toRightOf="@id/ruppessIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/dp4"
                    android:textSize="@dimen/sp13"
                    android:paddingBottom="@dimen/dp4"
                    app:customFont="@string/roboto_bold"
                    tools:text="500" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp6"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_marginRight="@dimen/dp6"
            android:layout_marginTop="@dimen/dp6"
            android:orientation="horizontal">
            <!--  ListRow Left sied Thumbnail image -->

            <LinearLayout
                android:id="@+id/dataLayout"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/thumbnail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp5"
                        android:padding="3dip">

                        <com.rescribe.ui.customesViews.CircularImageView
                            android:id="@+id/imageURL"
                            android:layout_width="@dimen/dp50"
                            android:layout_height="@dimen/dp50"
                            android:layout_gravity="center"
                            android:src="@drawable/layer_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp16"
                        android:layout_toRightOf="@+id/thumbnail"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="vertical">

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/clinicName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Neuro Clinic"
                            android:visibility="visible"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp15"
                            app:customFont="@string/roboto_bold" />

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/doctorName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dr. Sandeep Patil"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp15"
                            app:customFont="@string/roboto_bold" />
                        <!-- Title Of Song-->
                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/aboutDoctor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/thumbnail"
                            android:layout_marginTop="1dip"
                            android:text="Cardilogist"
                            android:textColor="@color/dose_completed"
                            android:textSize="@dimen/sp11"
                            app:customFont="@string/roboto_medium" />

                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/doctorExperience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/doctorName"
                            android:layout_toRightOf="@+id/thumbnail"
                            android:gravity="right"
                            android:textColor="@color/dose_completed"
                            android:textSize="@dimen/sp11"
                            app:customFont="@string/roboto_medium" />
                        <!-- Rightend Duration -->
                        <com.rescribe.ui.customesViews.CustomTextView
                            android:id="@+id/doctorAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/doctorName"
                            android:layout_toRightOf="@+id/thumbnail"
                            android:gravity="right"
                            android:text="Aundh, Pune"
                            android:textColor="@color/dose_completed"
                            android:textSize="@dimen/sp11"
                            app:customFont="@string/roboto_medium" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/favoriteView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/gMapLocationView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp6"
                        android:src="@drawable/location_green"
                        android:visibility="invisible" />

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="2.1 KM"
                        android:textAllCaps="false"
                        android:textColor="@color/dose_completed"
                        android:textSize="@dimen/sp11"
                        android:visibility="invisible"
                        app:customFont="@string/roboto_regular" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp6">

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/doctorRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_marginLeft="@dimen/dp16"
                android:text="4.5"
                android:textColor="@color/rating_color"
                android:textSize="@dimen/sp16"
                app:customFont="@string/roboto_regular" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/customRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="9dp"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp6"
                android:layout_toRightOf="@id/doctorRating"
                android:stepSize="0.5" />

            <ImageView
                android:id="@+id/tokenNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                tools:src="@drawable/token_no_background" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp16"
            android:background="@color/divider"
            android:visibility="gone" />
    </LinearLayout>
</android.support.v7.widget.CardView>