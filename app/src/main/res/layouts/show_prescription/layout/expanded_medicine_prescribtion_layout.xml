<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/dividerForInstruction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp05"
        android:layout_marginTop="@dimen/dp6"
        android:visibility="gone"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/expandedMedicineDoseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp4"
        android:layout_marginTop="@dimen/dp8"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/showMorningDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_weight="0.2"
                android:src="@drawable/breakfast_normal_copy" />

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/morningDose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_weight="1.2"
                android:paddingLeft="@dimen/dp10"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:visibility="visible"
                app:customFont="@string/roboto_medium" />

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/morningDoseQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_marginRight="@dimen/dp12"
                android:layout_weight="1.5"
                android:textColor="@color/dose_completed"
                android:textSize="@dimen/sp11"
                android:textStyle="bold"
                android:visibility="visible"
                app:customFont="@string/roboto_medium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/showAfternoonDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_weight="0.2"
                android:src="@drawable/lunch_highlighted_copy" />

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/afternoonDose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_weight="1.2"
                android:paddingLeft="@dimen/dp10"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:visibility="visible"
                app:customFont="@string/roboto_medium" />

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/afternoonDoseQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_marginRight="@dimen/dp12"
                android:layout_weight="1.5"
                android:text=""
                android:textColor="@color/dose_completed"
                android:textSize="@dimen/sp11"
                android:textStyle="bold"
                android:visibility="visible"
                app:customFont="@string/roboto_medium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/showEveningDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_weight="0.2"
                android:src="@drawable/evening_11_copy_2" />

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/eveningDose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_weight="1.2"
                android:paddingLeft="@dimen/dp10"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:visibility="visible"
                app:customFont="@string/roboto_medium" />

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/eveningDoseQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_marginRight="@dimen/dp12"
                android:layout_weight="1.5"
                android:text=""
                android:textColor="@color/dose_completed"
                android:textSize="@dimen/sp11"
                android:textStyle="bold"
                android:visibility="visible"
                app:customFont="@string/roboto_medium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/showDinnerDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/dp6"
                android:layout_weight="0.2"
                android:src="@drawable/night_dinner_copy_5" />

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/nightDose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:paddingLeft="@dimen/dp10"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:visibility="visible"
                app:customFont="@string/roboto_medium" />

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/nightDoseQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_marginRight="@dimen/dp12"
                android:layout_weight="1.5"
                android:text=""
                android:textColor="@color/dose_completed"
                android:textSize="@dimen/sp11"
                android:textStyle="bold"
                android:visibility="visible"
                app:customFont="@string/roboto_medium" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/detailedInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.myrescribe.ui.customesViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp6"
                android:text="@string/instructions"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:textStyle="bold"
                app:customFont="@string/roboto_medium" />

            <com.myrescribe.ui.customesViews.CustomTextView
                android:id="@+id/tv_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_marginLeft="@dimen/dp4"
                android:layout_marginRight="@dimen/dp12"
                android:layout_marginStart="@dimen/dp4"
                android:layout_weight="1"
                android:textColor="@color/instruction_color"
                android:textSize="@dimen/sp11"
                app:customFont="@string/roboto_medium" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>