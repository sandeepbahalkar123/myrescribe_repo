<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp30"
    android:paddingRight="@dimen/dp30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!--  Mobile Label -->
        <android.support.design.widget.TextInputLayout style="@style/AppLoginMainStyle">

            <EditText
                android:id="@+id/editTextMobileNo"
                style="@style/AppLoginMainStyle"
                android:hint="@string/enter_mobile_no"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/generateOTP"
            style="@style/AppLoginMainStyle"
            android:layout_height="@dimen/dp30"
            android:background="@drawable/button_curve_background"
            android:gravity="center"
            android:text="@string/generate_otp"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />


    </LinearLayout>

</LinearLayout>

