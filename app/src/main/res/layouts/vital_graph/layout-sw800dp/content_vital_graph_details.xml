<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rescribe.ui.activities.vital_graph.VitalGraphDetailsActivity"
    tools:showIn="@layout/activity_vital_graph_details">

    <LinearLayout
        android:id="@+id/layout0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp14"
        android:paddingTop="@dimen/dp8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dp14"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp14"
            android:paddingStart="@dimen/dp20">

            <ImageView
                android:id="@+id/ellipse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp4"
                android:src="@drawable/ellipse_3" />

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp34"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ellipse"
                android:layout_toRightOf="@id/ellipse"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp10"
                android:paddingStart="@dimen/dp10"
                android:textColor="@color/tagColor"
                android:textSize="@dimen/sp16"
                app:customFont="@string/roboto_bold"
                tools:text="130/88 mm Hg" />


        </RelativeLayout>

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp46"
            android:paddingStart="@dimen/dp46"
            tools:text="23rd  Augâ€™17 " />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0"
                android:layout_weight="1"
                android:background="@color/tagColor">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/graphCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp16">

                </com.github.mikephil.charting.charts.LineChart>

            </LinearLayout>

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0"
                android:layout_weight="1"
                android:paddingEnd="@dimen/dp24"
                android:paddingStart="@dimen/dp24"
                android:text="@string/dummy_full"
                android:textSize="@dimen/sp14"
                app:customFont="@string/roboto_medium" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
