<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal">

                <com.rescribe.ui.customesViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Appointments"
                    android:textSize="12sp"
                    app:customFont="@string/roboto_regular" />

                <com.rescribe.ui.customesViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:drawableLeft="@drawable/ruppee_dashboard"
                    android:drawablePadding="@dimen/dp2"
                    android:gravity="right"
                    android:text="500"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:customFont="@string/roboto_bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp5"
                    android:padding="3dip">

                    <com.rescribe.ui.customesViews.CircularImageView
                        android:id="@+id/imageURL"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_gravity="center"
                        android:src="@drawable/layer_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doctorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/doctorType"
                        android:layout_toRightOf="@+id/thumbnail"
                        android:text="Dr. Sandeep Patil"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14"
                        app:customFont="@string/roboto_bold" />
                    <!-- Title Of Song-->
                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doctorType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/thumbnail"
                        android:layout_marginTop="1dip"
                        android:text="Cardilogist"
                        android:textColor="@color/dose_completed"
                        android:textSize="@dimen/sp11"
                        app:customFont="@string/roboto_medium" />

                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doctorExperience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/doctorName"
                        android:layout_toRightOf="@+id/thumbnail"
                        android:gravity="right"
                        android:text="10 years of experience "
                        android:textColor="@color/dose_completed"
                        android:textSize="@dimen/sp11"
                        app:customFont="@string/roboto_medium" />
                    <!-- Rightend Duration -->
                    <com.rescribe.ui.customesViews.CustomTextView
                        android:id="@+id/doctorAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/doctorName"
                        android:layout_toRightOf="@+id/thumbnail"
                        android:gravity="right"
                        android:text="Aundh, Pune"
                        android:textColor="@color/dose_completed"
                        android:textSize="@dimen/sp11"
                        app:customFont="@string/roboto_medium" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp40">

            <com.rescribe.ui.customesViews.CustomTextView
                android:id="@+id/recentVisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/recently_visited_doctor_bg" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
